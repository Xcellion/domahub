<!DOCTYPE html>

<html>

	<head>
		<title>Profile Dashboard - DomaHub</title>
		<%- include("../templates/head_links"); %>
		<link rel="stylesheet" href="/css/profile_general.css" type="text/css" />
	</head>

<body>

	<%- include("../templates/navbar", {user: user}); %>

	<div class="container clear-nav-profile">
    <div class="tabs is-centered">
      <ul>
        <li class="is-active"><a href="/profile/dashboard" tabindex="1">Dashboard</a></li>
        <!-- <li><a href="/profile/messages" tabindex="1">Messages</a></li> -->
        <li><a href="/profile/mylistings" tabindex="1">My Listings</a></li>
        <li><a href="/profile/myrentals" tabindex="1">My Rentals</a></li>
        <li><a href="/profile/settings" tabindex="1">Account Settings</a></li>
      </ul>
    </div>
	</div>

	<section class="section min-height">
		<div class="container">
			<div class="columns">
				<div class="column is-4">
					<div class="card is-profile-card margin-bottom-25">
						<div class="card-image">
							<figure class="image is-4by3">
								<img src="https://placeholdit.imgix.net/~text?txtsize=30&bg=3cbc8d&txtclr=ffffff&txt=<%= user.username %>&w=300&h=200" />
							</figure>
							<!-- <p class="card-footer-item">
	              <input type="file" name="csv" id="profile_pic" class="input-file" />
	              <label id="profile_pic-label" for="profile_pic" class="button is-primary"><i class="fa fa-upload"></i><span class="label-text">Upload Picture</span></label>
	            </p> -->
						</div>
						<div class="card-content has-text-centered">
							<h2><%= user.username %></h2>
							<p><%= user.email %></p>
						</div>
						<div class="card-footer has-text-centered">
							<a class="button is-primary" href="/profile/settings">Edit Profile</a>
						</div>
					</div>
					<article class="message margin-bottom-25">
						<div class="message-header is-light">
							<p>Quick Links</p>
						</div>
						<div class="message-body">
							<div class="content">
								<ul>
									<li><a class="is-accent" href="/authorizestripe" title="Payments">Manage Payments</a></li>
									<li><a class="is-accent" href="/profile/settings" title="Change Email">Change Email Address</a></li>
									<li><a class="is-accent" href="/faq" title="FAQ">Frequently Asked Questions</a></li>
								</ul>
							</div>
						</div>
					</article>
				</div>

				<div class="column is-8">
					<% if (user.type != 2){ %>
						<div class="notification is-primary">
							<div class="content">
								<h3 class="is-white">
									You must connect your account with Stripe
										before you can receive payments.
								</h3>
							</div>
							<a class="button is-primary is-inverted" href="/authorizestripe">Connect with Stripe</a>
							<a class="button is-primary is-inverted" href="https://stripe.com/about" target="_blank">
								Learn more about Stripe
							</a>
						</div>
					<% } %>

					<article class="message margin-bottom-25">
						<div class="message-header is-light">
							<p>Notifications (2)</p>
						</div>
						<div class="message-body">
							<div class="content">
								<ol>
									<li>Complete your account information in the Settings tab.</li>
									<li>Upload a profile photo using the button on the left.</li>
									<li>Complete other verification methods in the Settings tab.</li>
								</ol>
							</div>
						</div>
					</article>

				</div>
			</div>
		</div>
	</section>

	<%- include("../templates/footer"); %>
	<%- include("../templates/js_scripts"); %>
	<script src="/js/lib/moment.min.js" type="text/javascript"></script>
	<script src="/js/lib/randomColor.js" type="text/javascript"></script>
	<script src="/js/lib/chart.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		//redirect to homepage if user is not defined
		var user = <% if(typeof user != "undefined"){ %><%-JSON.stringify(user)%><% }else{ %>window.location="/"<% } %>;
		var listings_search = <% if(typeof listings_search != "undefined"){ %><%-JSON.stringify(listings_search)%><% }else{ %>""<% } %>;
		var rentals = <% if(typeof rentals != "undefined"){ %><%-JSON.stringify(rentals)%><% }else{ %>""<% } %>;
	</script>
	<script src="/js/routes/profile/profile_dashboard_logic.js" type="text/javascript"></script>

	</body>

</html>

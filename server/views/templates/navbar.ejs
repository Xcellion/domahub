<%# navbar checks for a user variable, if it doesnt exist, then display the login button %>
<% if (!user) { %>
    <div class="nav-item">
      <a id="login_modal" class="button is-primary modal-button" title="Log In" data-object="#modal_login">Log In</a>
    </div>
    <!--LOGIN DROPDOWN-->
    <div id="modal_login" class="modal">
      <div class="modal-background"></div>
      <div class="modal-container">
        <div class="modal-content">
          <%# navbar checks for a user variable, if it doesnt exist, then display the login modal stuff %>
          <% if (!user) { %>
            <div id="login_dropdown">
              <div id="message">Please log in below</div>
              <form id="target" action="/login" method="post">
                <p class="control has-icon">
                  <input id="email" class="input is-medium" name="email" type="email" placeholder="Email">
                  <i class="fa fa-envelope"></i>
                </p>
                <p class="control has-icon">
                  <input id="password" class="input is-medium" name="password" type="password" placeholder="Password">
                  <i class="fa fa-lock"></i>
                </p>
                <p class="control">
                  <button id="drop_login_button" class="button is-primary is-medium is-fullwidth">
                    Log In
                  </button>
                </p>
                <div class="control is-grouped">
                  <p class="control is-expanded">
                    <label class="checkbox">
                      <input type="checkbox">
                      Remember me
                    </label>
                  </p>
                  <p class="control">
                      <a class="forgot orange_link" href="/forgot">Forgot password?</a>
                  </p>
                </div>

            <div id="linebreak2"></div>

              <p class="control">
                <p class="has-text-centered">
                  Don&#39;t have an account?
                </p>
                <div class="has-text-centered">
                  <a class="signup  orange_link" href="/signup">Sign Up Now</a>
                </div>
              </p>
              </form>
            </div>
          <% } %>
        </div>
      </div>
      <button class="modal-close"></button>
    </div>

<%# or else display the user profile as logged in %>
<% } else { %>
  <div class="nav-item">
    <a id="profile_button" class="button is-outlined is-primary">
      <span><%= user.fullname %></span>
      <span class="icon">
        <i class="fa fa-angle-down"></i>
      </span>
    </a>
    <div id="profile_dropdown">
      <aside class="menu">
        <p class="menu-label">
          General
        </p>
        <ul class="menu-list">
          <li><a href="/profile">My Profile</a></li>
          <li><a href="#">Notifications</a></li>
        </ul>
        <p class="menu-label">
          My Domains
        </p>
        <ul class="menu-list">
          <li><a href="#">Manage Listings</a></li>
          <li>
            <a class="" href="#">Manage Bids</a>
            <!-- <ul>
              <li><a href="#">Example of</a></li>
              <li><a href="#">an inner</a></li>
              <li><a href="#">dropdown list</a></li>
            </ul> -->
          </li>
        </ul>
        <p class="menu-label">
          Account
        </p>
        <ul class="menu-list">
          <li><a href="#">Settings</a></li>
          <li><a class="logout" href="/logout">Log Out</a></li>
        </ul>
      </aside>
    </div>
  </div>
<% } %>


</div>
</nav>


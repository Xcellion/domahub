<script type="text/javascript">
  var user = <% if(typeof user != "undefined"){ %><%-JSON.stringify(user)%><% }else{ %>""<% } %>;
</script>
<script src="/js/navbar_logic.js" type="text/javascript"></script>
<script src="/js/routes/account/account_login_logic.js" type="text/javascript"></script>

<%- include("notifications.ejs"); %>

<% if (!user) { %>
  <div id="modal-login" class="modal">
    <div class="modal-background"></div>
    <div class="modal-container">
      <div class="modal-content is-login pop-in">
        <div id="login-dropdown">
          <div class="content has-text-centered">
            <h2>
              <a class='is-inline-block flat-logo is-primary' title="Home" href="/">
                <div class='is-inline-block flat-logo is-primary'></div>
              </a>
            </h2>
          </div>
          <form id="login-form" action="/login" method="post">
            <div class="control has-icon">
              <input required id="email" autofocus class="input is-medium" name="email" type="email" placeholder="Email" spellcheck="false">
              <div class="icon">
                <i class="far fa-envelope"></i>
              </div>
            </div>
            <div class="control has-icon">
              <input required id="password" class="input is-medium" name="password" type="password" placeholder="Password">
              <div class="icon">
                <i class="far fa-lock"></i>
              </div>
            </div>
            <div class="control">
              <button id="login-button" class="button is-primary is-stylish is-fullwidth">
                <div class="icon is-small">
                  <i class="far fa-sign-in"></i>
                </div>
                <span>Log In</span>
              </button>
            </div>
            <div class="control is-spaced">
              <div>
                <div class="checkbox-form is-inline">
                  <input id="remember-checkbox" type="checkbox" title="Remember Me" />
                  <label for="remember-checkbox" tabindex="0"></label>
                </div>
                <p class="remember-text">
                  Remember Me
                </p>
              </div>
              <p class="control-right">
                  <a class="forgot is-underlined is-primary" href="/forgot">Forgot password?</a>
              </p>
            </div>
          <%# <p class="control">
            <p class="has-text-centered">
              Don&#146;t have an account?
            </p>
            <div class="has-text-centered">
              <a class="signup is-primary" href="/signup">Sign Up Now</a>
            </div>
          </p> %>
          </form>
        </div>
      </div>
    </div>
    <button class="modal-close"></button>
  </div>
<% } %>

<nav id="navbar" class="nav">
  <div class="nav-left">
    <div class="nav-item">
      <a id="nav-logo" class="flat-logo is-white is-hidden-mobile" title="Home" href="/">
      </a>
      <a class="circle-logo is-hidden-tablet" title="Home" href="/"></a>
    </div>
  </div>
  <div class="nav-center">
    <% if (!user) { %>
      <div class="nav-item is-hidden-tablet">
        <a id="nav-demo-button" class="is-hidden has-icon button is-stylish is-small is-accent is-outlined" title="Try Demo" href="/demo">
          <div class="icon is-small">
            <i class="far fa-desktop"></i>
          </div>
          <span>
            Try Demo
          </span>
        </a>
      </div>
      <div class="nav-item is-hidden-tablet">
        <a id="nav-signup-button" class="is-hidden has-icon button is-stylish is-small is-primary is-outlined" title="Sign Up" href="/signup">
          <div class="icon">
            <i class="far fa-user-circle"></i>
          </div>
          <span>
            Sign Up
          </span>
        </a>
      </div>
    <% } %>
  </div>

  <span class="nav-toggle is-black" tabindex="0">
    <span></span>
    <span></span>
    <span></span>
  </span>
  <div class="nav-right nav-menu is-white">

    <%# navbar checks for a user variable, if it doesnt exist, then display the login button %>
    <% if (!user) { %>
      <div class="nav-item">
        <a class="nav-link is-white" title="Features" href="/features">Features</a>
      </div>
      <div class="nav-item">
        <a class="nav-link is-white" title="Pricing" href="/#pricing">Pricing</a>
      </div>
      <div class="nav-item is-hidden-mobile">
        <a id="nav-demo-button" class="has-icon button is-stylish is-small is-accent" title="Try Demo" href="/demo">
          <div class="icon is-small">
            <i class="far fa-desktop"></i>
          </div>
          <span>
            Try Demo
          </span>
        </a>
      </div>
      <div class="nav-item is-hidden-mobile">
        <a class="has-icon button is-stylish is-small is-primary is-outlined" title="Sign Up" href="/signup">
          <div class="icon">
            <i class="far fa-user-circle"></i>
          </div>
          <span>
            Sign Up
          </span>
        </a>
      </div>
      <div class="nav-item">
        <a id="login-navbar" class="checkout-track has-icon login-modal button is-stylish is-outlined is-small is-primary modal-button" title="Log In" data-object="#modal-login">
          <div class="icon is-small">
            <i class="far fa-sign-in"></i>
          </div>
          <span>
            Log In
          </span>
        </a>
      </div>

    <!-- or else display the user profile as logged in -->
    <% } else { %>
      <div class="nav-item">
        <a class="nav-link is-white" title="My Dashboard" href="/profile/dashboard">Dashboard</a>
      </div>
      <div class="nav-item">
        <a id="profile-button" class="button is-primary is-outlined is-stylish is-small" title="Profile">
          <span><%= (user.username.length > 6) ? user.username.slice(0,6) + "..." : user.username %></span>
          <div class="icon">
            <i class="far fa-angle-down"></i>
          </div>
        </a>
        <a class="nav-link is-hidden-tablet" href="/profile/mylistings" title="My Listings">
          My Listings
        </a>
        <div id="profile-dropdown" class="is-hidden is-hidden-mobile expand-out">
          <ul class="profile-dropdown-menu">
            <li class="menu-item has-icon">
              <a href="/profile/mylistings">
                <div class="icon is-small">
                  <i class="far fa-list-alt"></i>
                </div>
                <span>My Listings</span>
              </a>
            </li>
            <li class="menu-item has-icon">
              <a href="/profile/settings">
                <div class="icon is-small">
                  <i class="far fa-cog"></i>
                </div>
                <span>Account Settings</span>
              </a>
            </li>
            <% if (!user.stripe_subscription_id) { %>
              <li id="nav-premium-link menu-item has-icon">
                <a href="/profile/settings#premium">
                  <div class="icon is-primary is-small">
                    <i class="far fa-trophy-alt"></i>
                  </div>
                  <span>Upgrade Account</span>
                </a>
              </li>
            <% } %>
            <li class="menu-item has-icon">
              <a href="/logout">
                <div class="icon is-small">
                  <i class="far fa-sign-out"></i>
                </div>
                <span>Log Out</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="nav-item is-hidden-tablet">
        <a class="nav-link is-hidden-tablet" href="/profile/settings" title="Account Settings">
          Account Settings
        </a>
      </div>
      <% if (!user.stripe_subscription_id) { %>
        <div class="nav-item is-hidden-tablet">
          <a class="nav-link is-hidden-tablet" href="/profile/settings#premium" title="Upgrade to Premium">
            Upgrade Account
          </a>
        </div>
      <% } %>
      <div class="nav-item is-hidden-tablet">
        <a class="nav-link is-hidden-tablet" href="/logout" title="Log Out">
          Log Out
        </a>
      </div>
    </div>
    <% } %>

</nav>

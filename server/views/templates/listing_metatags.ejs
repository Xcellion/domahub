<meta name="description" content="<%= listing_info.description %>" />
<%# compare tool or not %>
<% if (typeof compare == undefined || compare == false ) { %>
  <meta property="og:title" content="<%= listing_info.domain_name %> - DomaHub" />
  <meta property="og:description" content="<%= (listing_info.description) ? listing_info.description : 'Click here to buy this domain name on DomaHub! Make an offer or rent the domain for variable lengths of time.' %>" />
  <meta property="og:image" content="<%= (listing_info.logo && listing_info.premium) ? listing_info.logo : 'https://domahub.com/images/dh-assets/dh-listing-splash.png' %>" />
  <meta property="og:url" content="https://www.domahub.com/listing/<%= listing_info.domain_name %>" />
<% } else { %>
  <meta property="og:description" content="Create beautiful sales pages for your domain names! Click here to try out the demo and see how your domain name could look like!" />
  <meta property="og:title" content="Simple, Beautiful Sales Pages For Your Domains" />
  <meta property="og:image" content="https://domahub.com/images/dh-assets/dh-features.png" />
  <meta property="og:url" content="https://www.domahub.com/listing/<%= listing_info.domain_name %>?compare=true" />
<% } %>
<meta property="og:type" content="website" />

<!DOCTYPE html>
<html>
  <head>
    <title>DomaHub - Verify My Account</title>
    <link rel="stylesheet" type="text/css" href="/css/login_signup.css" />
    <%- include("templates/head_links"); %>
  </head>

  <body>

    <div id="login-form" class="form">
        <form id="target" method="post">
          <div class="has-text-centered logo-login">
            <a class="logo-text primary-logo" href="/">DomaHub</a>
          </div>
          <div id="message" class="has-text-centered">
            <% if (typeof message != "undefined") {%>
              <%= message %>
            <% } else {%>
                Click below to send an email to verify your account!
            <% } %>
        </div>

        <div id="form_to_hide">
            <p class="control">
                <button id="login-button" class="login-button button is-primary is-medium is-fullwidth">
                    Verify your account
                </button>
            </p>
        </div>

        <div id="accept">
            <a id="login-button" class="login-button button is-primary is-medium is-fullwidth" href="/login">
                Log in
            </a>
        </div>

        </form>
    </div>

    <script src="/js/routes/verify_request_logic.js" type="text/javascript"></script>

  </body>

</html>

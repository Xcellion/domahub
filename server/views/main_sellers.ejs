<body>

  <%- include("templates/navbar", {user: user}); %>

  <section class="landing clear-nav">
    <div id="sellers-img" class="landing-img">
      <div class="flex-column-center img-wrapper">
      <div class="container flex-vert-center">
        <div class="columns is-mobile">
          <div class="column is-4">
            <div class="card is-transparent is-fullwidth">

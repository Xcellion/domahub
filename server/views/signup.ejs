<!doctype html>

<html>

	<head>
		<title>w3bbi</title>
		<link rel="stylesheet" href="/css/style_base.css" type="text/css" />
		<!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script> -->
		<script src="/js/jquery/jquery.js" type="text/javascript"></script>
		<script src="/js/signup.js" type="text/javascript"></script>
		<link rel="icon" type="image/ico" href="/images/favicon.ico">
	</head>
	
	<body>

		<div class="body_wrapper">
			
			<div id="form_wrapper">
				<% if (message) {%>
					<p id="sub_message"><%= message %>
				<% } else {%>
					<p id="sub_message">Enter your information below</p>
				<% } %>
			
				<form id="target" action="/signup" method="post">
					<input autofocus name="email" placeholder="Email" type="text" id="email_input">
					<input name="password" placeholder="Password" type="password" id="pw_input">
					<input name="verify_pw" placeholder="Confirm password" type="password" id="verify_input">
					<input id="submit" type="submit" value="Create account">
				</form>
				<div id="signup_wrapper">
					<a id="signup" href="/">Already have an account?</a>
				</div>
			</div>
			
		</div>

	</body>
	
</html>
<!-- page to sign up for new accounts -->

<!DOCTYPE html>

<html>

	<head>
		<title>w3bbi - Register</title>
		<link rel="stylesheet" href="/css/signup.css" type="text/css" />
  	<%- include("templates/head_links"); %>
	</head>

	<body>

			<div id="register_form">

				<!-- any messages from the server -->
				<div id="message">
					<% if (typeof message != "undefined") {%>
						<%= message %>
					<% } else {%>

					<% } %>
				</div>

				<form id="target" action="/signup" method="post">
					<fieldset class="w3bbi_login_icon">
						<a href="/">w3bbi</a>
					</fieldset>
					<fieldset class="email_name">
						<input autofocus name="email" placeholder="Email" type="text" id="email_input">
						<input name="fullname" placeholder="Full Name" type="text" id="fullname_input">
					</fieldset>
					<fieldset class="password_check">
						<input name="password" placeholder="Password" type="password" id="pw_input">
						<input name="verify_pw" placeholder="Confirm password" type="password" id="verify_input" autocomplete="off">
					</fieldset>
					<fieldset class="login_field">
						<button id="submit" value="Create account" type="submit">Create account</button>
					</fieldset>

<div id="linebreak2"></div>

					<fieldset class="login_triggers">
						<div class="trigger_link">
							<a id="login_link" href="/login">Already have an account?</a>
						</div>
					</fieldset>

				</form>
			</div>

	</body>

	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="/js/routes/client_signup.js" type="text/javascript"></script>
</html>

<!DOCTYPE html>
<html>
<head>
	<title>Create Listing - DomaHub</title>
	<%- include("templates/head_links"); %>
	<link rel="stylesheet" href="/css/listing_create.css" type="text/css" />
	<script type="text/javascript">
		var user = <% if(typeof user != "undefined"){ %><%-JSON.stringify(user)%><% }else{ %>""<% } %>;
		var message = <% if(typeof message != "undefined"){ %><%-JSON.stringify(message)%><% }else{ %>""<% } %>;
	</script>
	<script src="/js/routes/listing_create_logic.js" type="text/javascript"></script>
</head>

<body>

  <%- include("templates/navbar", {user: user}); %>

  <div id="mult-form-wrapper" class="is-hidden">
    <table class="table">
      <div class="content has-text-centered">
        <h2>You may upload a .csv file in the format below</h2>
      </div>
      <thead>
        <tr>
          <th>Domain name*</th>
          <th>Description*</th>
          <th>Minute price</th>
          <th>Hourly price</th>
          <th>Daily price</th>
          <th>Weekly price</th>
          <th>Monthly price</th>
          <th>Background image</th>
          <th>Purchase link</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>testdomain.com</td>
          <td>This is a test description</td>
          <td>1</td>
          <td>1</td>
          <td>10</td>
          <td>25</td>
          <td>50</td>
          <td>http://link-to-image.com/image.png</td>
          <td>http://link-to-buy.com/testdomain</td>
        </tr>
      </tbody>
    </table>
    <form id="mult-form" action="/listing/create/batch" method="post" enctype="multipart/form-data">
      <div class="control is-horizontal">
        <input type="file" name="csv" id="mult-csv" class="input-file" />
        <label for="mult-csv" class="button"><i class="fa fa-upload"></i>Upload CSV</label>
      </div>
      <progress id="mult-progress" class="progress"></progress>
      <nav class="level">
        <div class="level-left">
          <div class="level-item">
            <a class="mult-toggle orange-link">Single listing?</a>
          </div>
        </div>
        <div class="level-right">
          <div class="level-item">
            <input id="mult-submit" class="button is-primary" type="submit" value="Create listings" />
          </div>
        </div>
      </nav>
    </form>
  </div>

  <%- include("templates/footer"); %>

</body>
</html>

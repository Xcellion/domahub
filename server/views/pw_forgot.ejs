<!DOCTYPE html>
<html>
  <head>
    <title>DomaHub - Forgot My Password</title>
    <link rel="stylesheet" type="text/css" href="/css/login_signup.css" />
    <%- include("templates/head_links"); %>
  </head>

  <body>

    <div id="login-form" class="form">
      <form id="target" action="/forgot" method="post">
        <div class="has-text-centered logo-login">
          <a class="logo-text primary-logo" href="/">DomaHub</a>
        </div>
        <div id="message" class="has-text-centered">
          <% if (typeof message != "undefined") {%>
            <%= message %>
          <% } else {%>
              Enter your email to reset your password
          <% } %>
      </div>

      <div id="form_to_hide">
          <label class="label">Email</label>
          <p class="control">
              <input id="email" name="email" class="input is-medium" type="email">
          </p>
          <p class="control">
              <button id="login-button" class="login-button button is-primary is-medium is-fullwidth">
                  Change your password
              </button>
          </p>

          <div id="linebreak2"></div>

          <p class="control">
              <p class="has-text-centered">
                  Remember your password?
              </p>
              <div class="has-text-centered">
                  <a class="signup orange-link" href="/login">Log In Now</a>
              </div>
          </p>
      </div>

      <div id="accept">
          <a id="login-button" class="login-button button is-primary is-medium is-fullwidth" href="/">
            Go Back Home
          </a>
      </div>

      </form>
    </div>

  <script src="/js/routes/pw_forgot_logic.js" type="text/javascript"></script>

  </body>

</html>

<section class="section is-medium">
  <div class="container">
    <div id="attention" class="content">
      <h2 class="is-white">Try it now for free!</h2>
      <a tabindex="0" class="button is-primary is-inverted is-stylish is-large" href="/signup">
        <div class="icon">
          <i class="far fa-thumbs-up fa-sm" data-fa-transform="up-2"></i>
        </div>
        <span>Awesome, Sign Me Up!</span>
      </a>

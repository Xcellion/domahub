<!DOCTYPE html>
<html>
<head>
    <title>Redirecting... - DomaHub</title>
    <%- include("templates/head_links.ejs"); %>
    <link rel="stylesheet" type="text/css" href="/css/min/login_signup.min.css" />
    <script>
        var redirect = <% if(typeof redirect != "undefined"){ %><%-JSON.stringify(redirect)%><% }else{ %>"/"<% } %>;
    </script>
</head>

<body>

  <div class="content has-text-centered clear-nav">
    <h2 class="margin-bottom-5 has-text-centered">
        <a class='is-inline-block flat-logo is-primary' tabindex="0" title="Home" href="/">
            <div class='is-inline-block flat-logo is-primary'></div>
        </a>
    </h2>
  </div>

  <div id="login-form" class="account-form">
    <form id="target" action="/login" method="post">
        <p id="message" class="has-text-centered margin-bottom-25">
            <%= message %>
        </p>

        <div id="redirect">
            <a id="redirect-button" class="login-button button is-primary is-stylish is-fullwidth" href="<%= redirect %>"><%= button %></a>
        </div>

    </form>
  </div>

    <%- include("templates/js_scripts.ejs"); %>
    <script src="/js/redirect_logic.js" type="text/javascript"></script>

</body>

</html>

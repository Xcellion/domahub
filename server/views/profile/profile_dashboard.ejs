<!DOCTYPE html>

<html class="prevent-scroll-jump">

<head>
	<title>Dashboard - DomaHub</title>
	<link rel="stylesheet" href="/css/min/profile_dashboard.min.css" />
	<%- include("../templates/head_links"); %>
</head>

<body>

	<%- include("profile_nav.ejs"); %>

  <section class="section is-fullscreen">
    <div class="wrapper">

			<%- include("profile_left_menu.ejs"); %>

      <div class="right-content">
				<div class="columns">
          <div class="column">
            <h2 class="is-bold">Dashboard</h2>
            <p>
              Welcome <%= user.username %>!
            </p>
          </div>
				</div>
        <div class="columns">
					<div class="column is-7">
						<div class="card no-shadow is-fullwidth">
							<div class="card-header">
								<h3 class="card-header-title">Portfolio Overview</h3>
							</div>
							<div class="card-content">
								<div class="level is-mobile">
									<div class="level-item has-text-centered">
										<div class="content">
											<small class="heading is-uppercase margin-bottom-20">
												Total
											</small>
											<h1 class="margin-bottom-10"><%= user.listings.length %></h1>
											<a tabindex="0" href="/listings/create" class="button is-stylish">
                        <span class="icon is-small">
                          <i class="fa fa-plus"></i>
                        </span>
                        <span>Create Listings</span>
                      </a>
										</div>
									</div>
									<div class="level-item has-text-centered">
										<div class="content">
											<small class="heading is-uppercase margin-bottom-20">
												Unverified
											</small>
											<h1 id="unverified-counter" class="is-danger margin-bottom-10">
											</h1>
                      <a id="unverified-button" tabindex="0" class="unverified-href button is-stylish">
                        <span class="icon is-small">
                          <i class="fa fa-check-circle-o"></i>
                        </span>
                        <span>Verify Listings</span>
                      </a>
                    </div>
                  </div>
									<div class="level-item has-text-centered">
										<div class="content">
											<small class="heading is-uppercase margin-bottom-20">
												Offers
											</small>
											<h1 id="offers-counter" class="is-success margin-bottom-10">0</h1>
                      <a tabindex="0" href="/profile/mylistings?tab=offers" class="button is-stylish">
                        <span class="icon is-small">
                          <i class="fa fa-check-circle-o"></i>
                        </span>
                        <span>View Offers</span>
                      </a>
                    </div>
									</div>
								</div>
							</div>
						</div>
						<div class="card no-shadow is-fullwidth">
							<div class="card-header">
								<h3 class="card-header-title">Traffic Overview</h3>
								<button tabindex="0" class="card-header-icon button">
									<span class="icon"><i class="fa fa-calendar"></i></span>
									<span>Change Date</span>
								</button>
							</div>
							<div class="card-content">
								<span class="select">
									<select tabindex="0">
										<option>All Domains</option>
										<option>Most Traffic</option>
									</select>
								</span>
							</div>
						</div>
					</div>
          <div class="column is-5">
            <div class="card no-shadow is-fullwidth">
              <div class="card-header">
                <h3 class="card-header-title">Notifications</h3>
              </div>
              <div class="card-content">
                <div class="content">
                  <ul id="notifications-tray">
									</ul>
                </div>
              </div>
            </div>
            <div class="card no-shadow is-fullwidth">
              <div class="card-header">
                <h3 class="card-header-title">Verifications</h3>
              </div>
              <div class="card-content">
                <div class="control is-spaced">
                  <div class="content control-left">
                    <p>
                      Email Address
                    </p>
                  </div>
									<span class="tag is-primary control-right">Verified</span>
                </div>
								<div class="control is-spaced">
                  <div class="content control-left">
                    <p>
                      Payout Settings
                      <% if (!user.stripe_account) { %>
                        <span class="icon is-tooltip is-small"
                        data-balloon-length="large" data-balloon="You must complete your payout settings first in order to add a bank account." data-balloon-pos="up">
                        <i class="fa fa-question-circle"></i>
                        </span>
                      <% } %>
                    </p>
                  </div>
									<% if (user.stripe_account) { %>
										<span class="tag is-primary control-right">Completed</span>
									<% } else { %>
										<span class="tag is-danger control-right">Incomplete</span>
									<% } %>
                </div>
                <div class="control is-spaced">
                  <div class="content control-left">
                    <p>
                      Bank Account
                      <% if (!user.stripe_info || !user.stripe_info.transfers_enabled) { %>
                        <span class="icon is-tooltip is-small"
                        data-balloon-length="large" data-balloon="You will not be able to withdraw funds until you connect your bank account." data-balloon-pos="up">
                        <i class="fa fa-question-circle"></i>
                        </span>
                      <% } %>
                    </p>
                  </div>
									<% if (user.stripe_info && user.stripe_info.transfers_enabled) { %>
										<span class="tag is-primary control-right">Connected</span>
									<% } else { %>
										<span class="tag is-danger control-right">Not Connected</span>
									<% } %>
                </div>
              </div>
            </div>
						<div class="notification is-info no-shadow">
              <div class="content">
                <h3 class="is-bold is-white">Earn Free Months of <a href="/features#pricing" class="is-underlined">Premium</a></h3>
                <p class="is-white">
                  Invite your friends to try DomaHub using your unique promo code and get 1 free month of premium
                  for each friend that signs up for a Premium account!
                </p>
              </div>
              <a tabindex="0" class="button is-info is-inverted">
                <span class="icon is-small"><i class="fa fa-smile-o"></i></span>
                <span>Invite Friends</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="/js/routes/profile/profile_dashboard_logic.js" type="text/javascript"></script>
</body>

</html>

<div class="control is-spaced">
  <div class="control-left">
    <div class="content">
      <h2>My Listings</h2>
    </div>
  </div>
  <div class="control-right">
    <a class="button is-primary is-stylish is-small" title="Create New Listings" tabindex="0" href="/listings/create">
      <div class="icon is-small">
        <i class="fal fa-plus"></i>
      </div>
      <span>Create New Listings</span>
    </a>
  </div>
</div>

<div id="domain-selector" class="is-hidden">
  <div id="domain-selector-toolbox" class="control is-spaced is-mobile listings-toolbar">

    <!-- BUTTON MENU -->
    <div class="yes-listings-elem button-wrapper is-mobile control-left">
      <div id="select-all-wrapper">
        <a id="selector-select-button" class="button is-black is-inverted" tabindex="0" title="Select">
          <form class="checkbox-form">
            <input id="select-all" class="select-button" data-selected="false" type="checkbox" tabindex="0" title="Select All" />
            <label for="select-button"></label>
          </form>
          <div class="icon"><i class="fal fa-angle-down"></i></div>
        </a>
        <div id="select-all-drop" class="is-hidden domain-tooltip">
          <a class="select-drop-button" data-type="all" data-value=true>All</a>
          <a class="select-drop-button" data-type="none" data-value=true>None</a>
          <a class="select-drop-button" data-type="verified" data-value=true>Verified</a>
          <a class="select-drop-button" data-type="unverified" data-value=true>Unverified</a>
          <a class="select-drop-button" data-type="status" data-value=true>Active (Verified)</a>
          <a class="select-drop-button" data-type="status" data-value=false>Inactive (Verified)</a>
          <a class="select-drop-button" data-type="hub" data-value=1>Listing Hubs</a>
          <a class="select-drop-button" data-type="rented" data-value=1>Rented Now</a>
          <a class="select-drop-button" data-type="accepted" data-value=1>Accepted An Offer</a>
          <a class="select-drop-button" data-type="deposited" data-value=1>Sold (Not Transferred)</a>
          <a class="select-drop-button" data-type="transferred" data-value=1>Sold (Transferred)</a>
        </div>
      </div>

      <a id="selector-edit-button" class="selector-button button is-flexible is-stylish is-black is-inverted is-small is-hidden" tabindex="0" title="Edit Details">
        <div class="icon is-small">
          <i class="fal fa-edit"></i>
        </div>
        <span>Edit Details</span>
      </a>
      <a id="selector-verify-button" class="selector-button button is-flexible is-stylish is-black is-inverted is-small is-hidden" tabindex="0" title="Verify Ownership">
        <div class="icon is-small">
          <i class="fal fa-check-circle"></i>
        </div>
        <span>Verify Ownership</span>
      </a>
      <a id="selector-offers-button" class="selector-button button is-flexible is-stylish is-black is-inverted is-small is-hidden" tabindex="0" title="View Offers">
        <div class="icon is-small">
          <i class="fal fa-shopping-basket"></i>
        </div>
        <span>View Offers</span>
      </a>
      <a id="selector-delete-button" class="selector-button button is-flexible is-stylish is-black is-inverted is-small is-hidden" tabindex="0" title="Delete Listing(s)">
        <div class="icon is-small">
          <i class="fal fa-trash-alt"></i>
        </div>
        <span>Delete</span>
      </a>
      <%# <a id="selector-stats-button" class="selector-verified-button button is-hidden" tabindex="0" title="View Statistics">
        <div class="icon is-small">
          <i class="fal fa-bar-chart"></i>
        </div>
        <span>View Statistics</span>
      </a>%>
      <div id="hub-selector-wrapper" class="selector-button">
        <a id="hub-select-button" class="button is-flexible is-stylish is-small is-black is-inverted is-hidden" tabindex="0" title="Add to a listing hub">
          <div class="icon is-small">
            <i class="fal fa-object-group"></i>
          </div>
          <span>Add To A Hub</span>
          <div class="icon"><i class="fal fa-angle-down"></i></div>
        </a>
        <div id="hub-drop" class="is-hidden domain-tooltip">
          <div id="hub-drop-clone" class="is-hidden">
            <div class="control">
              <form class="checkbox-form is-marginless">
                <input class="select-button" type="checkbox" tabindex="0"/>
                <label class="hub-drop-label"><span class="hub-drop-domain-name"></span></label>
              </form>
            </div>
          </div>
          <div id="hub-drop-domains-wrapper"></div>
          <a id="hub-drop-apply" class="button is-primary is-fullwidth is-hidden">Apply</a>
        </div>
      </div>
    </div>

    <!-- FITER MENU -->
    <div id="filter-menu" class="yes-listings-elem control-right">
      <div class="control is-grouped">
        <div class="control">
          <span class="select is-stylish is-transparent is-narrow">
            <select id="filter-select" tabindex="0">
              <option selected value="id">View All</option>
              <option value="unverified">Unverified</option>
              <option value="status">Active (Verified)</option>
              <option value="inactive">Inactive (Verified)</option>
              <option value="hub">Listing Hubs</option>
              <option value="rented">Rented Now</option>
              <option value="accepted">Accepted An Offer</option>
              <option value="deposited">Sold (Not Transferred)</option>
              <option value="transferred">Sold (Transferred)</option>
            </select>
          </span>
        </div>
        <div class="control is-mobile">
          <button id="refresh-listings-button" class="button is-flexible is-stylish is-small is-black is-inverted" title="Refresh Listings" tabindex="0">
            <div class="icon is-small">
              <i class="fal fa-sync-alt"></i>
            </div>
            <span class="is-hidden-mobile">Refresh</span>
          </button>
        </div>
        <div class="control has-icon is-expanded">
          <div class="icon">
            <i class="fal fa-search"></i>
          </div>
          <input id="domain-search" tabindex="0" class="input is-stylish has-shadow" type="text" placeholder="Search" />
        </div>
      </div>
    </div>
  </div>

  <!-- DOMAINS TABLE -->
  <table id="listings-table" class="table has-shadow is-fixed no-borders">
    <thead class="yes-listings-elem has-hover-effect is-pastel no-border-bottom">
      <tr>
        <th class="checkbox-col has-text-centered">
          <span id="current-selected-count"></span>
        </th>
        <th data-value="domain_name" class="listing-header-sort">
          <span>Domain</span>
          <div class="icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
        <th data-value="status" class="td-status listing-header-sort">
          <span>Status</span>
          <div class="listing-header-sort icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
        <th data-value="registrar_name" class="is-hidden-mobile listing-header-sort">
          <span>Registrar</span>
          <div class="listing-header-sort icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
        <th data-value="date_registered" class="is-hidden-mobile listing-header-sort">
          <span>Registered</span>
          <div class="listing-header-sort icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
        <th data-value="date_expire" class="is-hidden-mobile listing-header-sort">
          <span>Expires</span>
          <div class="listing-header-sort icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
        <th data-value="min_price" class="is-hidden-456px listing-header-sort">
          <span>Min. Price</span>
          <div class="listing-header-sort icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
        <th data-value="buy_price" class="is-hidden-456px listing-header-sort">
          <span>BIN Price</span>
          <div class="listing-header-sort icon is-small"><i class="fal fa-sort" data-fa-transform="down-2"></i></div>
        </th>
      </tr>
    </thead>
    <tbody id="table-body">
      <tr id="loading-listings-row" class="no-hover-effect">
        <td colspan="6">
          <div class="nothing-exists-row has-text-centered">
            <p class='icon is-medium is-primary'><i class="fal fa-spin fa-circle-notch"></i></p>
            <p>Now loading your DomaHub listings...</p>
          </div>
        </td>
      </tr>
      <tr id="no-domains-row" class="no-hover-effect no-listings-elem is-hidden">
        <td colspan="6">
          <div class="nothing-exists-row content has-text-centered">
            <div class="icon is-large is-primary">
              <i class="fal fa-exclamation-circle"></i>
            </div>
            <p>
              You have no listings. Let's go make some!
            </p>
            <a class="button is-primary is-stylish" href="/listings/create">
              <div class="icon is-small">
                <i class="fal fa-plus"></i>
              </div>
              <span>Create New Listings</span>
            </a>
          </div>
        </td>
      </tr>
      <tr id="no-listings-row" class="no-hover-effect is-hidden">
        <td colspan="6">
          <div class="nothing-exists-row content has-text-centered">
            <div class="icon is-large is-danger">
              <i class="fal fa-exclamation-circle"></i>
            </div>
            <p>There are no matching listings.</p>
          </div>
        </td>
      </tr>
      <tr id="verified-clone-row" class="clone-row table-row no-hover-effect is-hidden">
        <td class="checkbox-col">
          <form class="checkbox-form">
            <input class="select-button" data-selected="false" type="checkbox" tabindex="0" title="Select" />
            <label class="select-label" for="select-button"></label>
          </form>
        </td>
        <td class="td-domain domain_name-sort-value"></td>
        <td class="status-sort-value">
          <span class="td-status"></span>
          <span class="is-hidden pending-status-icon icon is-tooltip is-small" data-balloon-length="large"
          data-balloon="There are some pending DNS changes to this domain, please wait a few hours before changing it to an active listing." data-balloon-pos="up">
            <i class="fal fa-question-circle"></i>
          </span>
        </td>
        <td class="td-registrar is-hidden-mobile"></td>
        <td class="td-date is-hidden-mobile"></td>
        <td class="td-date-expire is-hidden-mobile has-cursor-pointer"></td>
        <td class="td-min is-hidden-456px"></td>
        <td class="td-bin is-hidden-456px"></td>
      </tr>
      <tr id="unverified-clone-row" class="clone-row table-row no-hover-effect is-unverified is-hidden">
        <td class="checkbox-col">
          <form class="checkbox-form">
            <input class="select-button" data-selected="false" type="checkbox" tabindex="0" title="Select" />
            <label class="select-label" for="select-button"></label>
          </form>
        </td>
        <td class="td-domain domain_name-sort-value"></td>
        <td>
          <span class="td-status status-sort-value"></span>
          <div class="unverified-icon icon is-danger is-inline is-small" data-balloon-length="large"
          data-balloon="Please prove that you own this domain by selecting it and clicking 'Verify Ownership'"
          data-balloon-pos="up">
            <i class="fal fa-exclamation-circle" data-fa-transform="down-1"></i>
          </div>
        </td>
        <td class="td-registrar is-hidden-mobile"></td>
        <td class="td-date is-hidden-mobile"></td>
        <td class="td-date-expire is-hidden-mobile has-cursor-pointer"></td>
        <td class="td-min is-hidden-456px"></td>
        <td class="td-bin is-hidden-456px"></td>
      </tr>
    </tbody>
  </table>
</div>

<div id="delete-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-container">
    <div class="modal-content is-small">
      <div class="content">
        <div class="notification no-shadow has-icon is-danger">
          <div class="icon-box">
            <div class="icon is-white">
              <i class="fal fa-exclamation-triangle"></i>
            </div>
          </div>
          <div class="content">
            <p class="is-white">Are you sure you want to delete the following <span id="delete-modal-count"></span> listing<span id="delete-modal-plural">s</span>?</p>
          </div>
        </div>
      </div>
      <div class="content">
        <ul id="delete-modal-domains" class="has-disc">
          <li id="delete-modal-domain-name-clone" class="is-hidden"></li>
        </ul>
      </div>
      <div class="control is-grouped">
        <div class="control is-expanded">
          <a id="delete-confirmed" tabindex="0" class='button is-fullwidth is-danger is-stylish is-small'>
            <div class="icon is-small"><i class="fal fa-trash"></i></div>
            <span>Delete</span>
          </a>
        </div>
        <div class="control is-expanded">
          <a tabindex="0" class='button is-fullwidth is-stylish is-small is-outlined is-black cancel-modal'>
            <div class="icon is-small"><i class="fal fa-times"></i></div>
            <span>Nevermind</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <button class="modal-close"></button>
</div>

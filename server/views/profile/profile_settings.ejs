                          <option value='NOK'>NOK: Norwegian Krone</option>
                          <option value='SGD'>SGD: Singapore Dollar</option>
                          <option value='SEK'>SEK: Swedish Krona</option>
                          <option value='USD'>USD: United States Dollar</option>
                        </select>
                      </span>
                    </div>
                    <div id="account_routing-wrapper" class="excess-routing-wrapper is-hidden control">
                      <label id="account_routing-text" class="label" for="account_routing-input">Routing Number</label>
                      <input id="account_routing-input" class="excess-routing-input input stripe-input" type="text" name="account_routing" />
                    </div>
                    <div id="account_routing2-wrapper" class="excess-routing-wrapper is-hidden control">
                      <label id="account_routing2-text" class="label" for="account_routing-input"></label>
                      <input id="account_routing2-input" class="excess-routing-input input stripe-input" type="text" name="account_routing2" />
                    </div>
                    <div id="account_routing3-wrapper" class="excess-routing-wrapper is-hidden control">
                      <label id="account_routing3-text" class="label" for="account_routing-input">Account Owner Name</label>
                      <input id="account_routing3-input" class="excess-routing-input input stripe-input" type="text" name="account_owner_name" />
                    </div>
                    <div class="control">
                      <label id="account_number-label" class="label" for="account_number-input">
                        <span id="account_number-text">Account Number </span>
                        <span class="is-hidden" id="account_number-last4">(Last 4 Digits)</span>
                      </label>
                      <input required id="account_number-input" class="excess-routing-input input stripe-input" type="text" name="account_number" />
                    </div>
                    <div class="control hidden-edit is-hidden">
                      <button tabindex="0" id="payout-bank-submit" class="submit-payout button is-stylish is-small is-primary">
                        <span>Save Changes</span>
                      </button>
                      <button tabindex="0" id="payout-bank-cancel" class="cancel-payout button is-stylish is-small is-danger is-hidden is-inverted">
                        <span>Cancel Changes</span>
                      </button>
                    </div>
                  </form>
                </div>
              </div>

              <!-- PAYPAL EMAIL -->
              <div class="card is-fullwidth">
                <div class="card-header">
                  <h3 class="card-header-title">
                    PayPal Information
                  </h3>
                  <span class="icon is-info" data-balloon="PayPal information is stored and handled by our payments processor, PayPal." data-balloon-pos="up" data-balloon-length="large">
                    <i class="fa fa-paypal"></i>
                  </span>
                </div>
                <div class="card-content">
                  <form id="paypal-form" class="form">
                    <div class="control">
                      <label class="label" for="paypal_email-input">PayPal Email Address</label>
                      <input required id="paypal_email-input" class="input" type="text" name="paypal_email-input" />
                    </div>
                  </form>
                </div>
              </div>

              <!-- PAYONEER EMAIL -->
              <div class="card is-fullwidth">
                <div class="card-header">
                  <h3 class="card-header-title">
                    Payoneer Information
                  </h3>
                </div>
                <div class="card-content">
                  <form id="" class="form">
                    <div class="control">
                      <label class="label" for="">Payoneer Email Address</label>
                      <input required id="" class="input" type="text" name="" />
                    </div>
                  </form>
                </div>
              </div>

            </div>
          </div>


				</div>

        <% if (user.stripe_charges) { %>
					<%- include("profile_transactions", {user: user}); %>

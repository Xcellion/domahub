</head>

<body>

	<%- include("profile_navbar_mobile.ejs"); %>

  <section class="section is-fullscreen">
		<div class="wrapper">

			<%- include("profile_navbar.ejs"); %>

			<div class="right-content">

        <div id="account-toolbar">
          <div class="content">
            <h2 class="is-bold">Account Settings</h2>
          </div>
          <div class="tabs is-boxed">
            <ul>
              <li id="account-tab" class="tab is-active">
                <a tabindex="0">
                  <span class="icon is-hidden-tablet"><i class="fa fa-user"></i></span>
                  <span class="is-hidden-mobile">Account</span>
                </a>
              </li>
              <li id="premium-tab" class="tab">
                <a tabindex="0">
                  <span class="icon is-hidden-tablet"><i class="fa fa-trophy"></i></span>
                  <span class="is-hidden-mobile">
                    <% if (user.stripe_subscription_id) { %>
                      Premium Status
                    <% } else { %>
                      Upgrade to Premium
                    <% } %>
                  </span>
                </a>
              </li>
              <li id="payment-tab" class="tab">
                <a tabindex="0">
                  <span class="icon is-hidden-tablet"><i class="fa fa-university"></i></span>
                  <span class="is-hidden-mobile">Payment</span>
                </a>
              </li>
              <li id="transactions-tab" class="tab">
                <a tabindex="0">
                  <span class="icon is-hidden-tablet"><i class="fa fa-money"></i></span>
                  <span class="is-hidden-mobile">Transactions</span>
                </a>
              </li>
              <li>
                <div class="control is-grouped">
                  <div class="control">
                    <a id="account-submit" class="is-hidden button is-primary">
                      <span class="icon is-small"><i class="fa fa-check-circle-o"></i></span>
                      <span>Save</span>
                    </a>
                  </div>
                  <div class="control">
                    <a id="account-cancel" class="is-hidden button is-danger">
                      <span class="icon is-small"><i class="fa fa-ban"></i></span>
                      <span>Cancel</span>
                    </a>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>

				<div id="account" class="columns is-hidden drop-tab">

          <div class="content">
            <h2 class="is-bold">Account Settings</h2>
          </div>
          <div class="tabs is-boxed">
            <ul>
              <li id="account-tab" class="tab is-active">
                <a tabindex="0" title="Account">
                  <div class="icon is-hidden-tablet">
										<i class="far fa-user"></i>
									</div>
                  <span class="is-hidden-mobile">Account</span>
                </a>
              </li>
              <li id="premium-tab" class="tab">
                <a tabindex="0" title="Premium Status">
                  <div class="icon is-hidden-tablet">
										<i class="far fa-trophy-alt"></i>
									</div>
                  <span class="is-hidden-mobile">
                    <% if (user.stripe_subscription_id) { %>
                      Premium Status
                    <% } else { %>
                      Upgrade to Premium
                    <% } %>
                  </span>
                </a>
              </li>
              <li id="payment-tab" class="tab">
                <a tabindex="0" title="Payments">
                  <div class="icon is-relative is-hidden-tablet">
										<i class="far fa-university"></i>
									</div>
                  <span class="is-relative is-hidden-mobile">Payment
										<div class="stripe-required-info is-hidden icon is-small is-danger" data-balloon="Information required!" data-balloon-pos="up" data-balloon-length="medium">
	                    <i class="far fa-exclamation-circle"></i>
	                  </div>
									</span>
                </a>
              </li>
              <li id="transactions-tab" class="tab">
                <a tabindex="0" title="Transactions">
                  <div class="icon is-hidden-tablet">
										<i class="far fa-money-bill"></i>
									</div>
                  <span class="is-hidden-mobile">Transactions</span>
                </a>
              </li>
              <li>
                <div class="control is-grouped">
                  <div class="control">
                    <button id="account-submit" type="submit" form="stripe-account-form" class="toolbar-submit-button toolbar-button is-hidden button is-primary is-stylish is-small">

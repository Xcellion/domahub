	<%- include("profile_nav.ejs"); %>

  <section class="section is-fullscreen">
    <div id="settings-msg-error" class="is-hidden is-danger notification is-popup">
      <button class="delete"></button>
      <p id="settings-msg-error-text" class='is-white'></p>
    </div>
    <div id="settings-msg-success" class="is-hidden is-primary notification is-popup">

    </div>
		<div class="wrapper">

			<%- include("profile_left_menu.ejs"); %>

				<div class="right-content">
					<div class="columns">
						<div class="column is-narrow">
							<div class="content">
								<h2>Settings</h2>
							</div>
							<aside class="menu">
								<p class="menu-label">
									Profile
								</p>
								<ul class="menu-list">
									<li><a id="basic-link" href='#basic' class="setting-link">Basic Information</a></li>
									<li>
                    <a id="premium-link" href='#premium' class="setting-link">
  										<span id="upgrade-to-premium-text" class="v-align-middle">
  											<% if (user.stripe_subscription_id) { %>
  												Upgrade to Premium
  											<% } else { %>
  												Premium Status
  											<% } %>
  										</span>
  										<span class="v-align-middle icon is-small">
  											<i class="fa fa-trophy"></i>
  										</span>
										</a>
                  </li>
                  <li><a id="promo-link" href='#promo' class="setting-link">Referrals & Promo Codes</a></li>
								</ul>
								<hr />
								<p class="menu-label">
									Payment
								</p>
								<ul class="menu-list">
									<li><a id="payout-address-link" href="#payout" class="setting-link">Payout Settings</a></li>
									<li><a id="payout-personal-link" href="#payout-personal" class="hide-stripe is-hidden setting-link">Personal Information</a></li>
									<li><a id="payout-bank-link" href="#payout-bank" class="hide-stripe is-hidden setting-link">Bank Information</a></li>
								</ul>
								<hr />
								<% if (user.stripe_charges) { %>
									<p class="menu-label">
										Transactions
									</p>
									<ul class="menu-list">
										<li><a id="history-link" href='#history' class="setting-link">Sales History</a></li>
									</ul>
									<ul class="menu-list">
										<li><a id="withdrawal-link" href='#withdrawal' class="setting-link">Withdraw Money</a></li>
									</ul>
								<% } %>
							</aside>
						</div>
						<div class="column is-8">
              <div id="basic" class="is-hidden card is-fullwidth">
                <div class="card-header is-justified-start">
                  <h3 class="card-header-title">
                    <span>Basic Information</span>
                  </h3>
                  <button class='edit-section-button is-primary card-header-icon button is-small'>
                    <span class="icon is-small"><i class="fa fa-cog"></i></span>
                    <span>Edit</span>
                  </button>
                </div>
                <div class="card-content">
                  <form id="account-form" class="margin-0 form account-form">
                    <div class="control">
                      <div class="label-icon">
                        <label class="label" for="email-input">Email Address</label>
                        <span data-balloon="Private" data-balloon-pos="up" class="icon is-tooltip is-small">
                          <i class="fa fa-lock"></i>
                        </span>
                      </div>
                      <input id="email-input" class="is-disabled input account-input" type="email" value="<%= user.email %>" />
                      <small class="tip">We don't share your email with anyone.</small>
                    </div>
                    <div class="control">
                      <label class="label" for="username-input">Username</label>
                      <input id="username-input" class="is-disabled input account-input" type="text" value="<%= user.username %>" spellcheck="false"/>
                      <small class="tip">Other users will be able to see your username.</small>
                    </div>
                    <div class="control">
                      <label class="label" for="old-pw-input">Current Password</label>
                      <input required id="old-pw-input" class="new-account-input is-disabled input account-input" name="password" type="password" autocomplete="new-password" value="">
                    </div>
                    <div class="control hidden-edit is-hidden">
                      <label id="pw-label" class="label" for="new-pw-input">New Password</label>
                      <input id="new-pw-input" class="new-account-input is-disabled input account-input" type="password"/>
                    </div>
                    <div class="control hidden-edit is-hidden">
                      <label class="label" for="verify-pw-input">Confirm Password</label>
                      <input id="verify-pw-input" class="new-account-input is-disabled input account-input" type="password">
                    </div>
                    <div class="control hidden-edit is-hidden">
                      <button id="change-account-submit" class="button is-disabled is-primary is-stylish is-small">
                        <span>Save Changes</span>
                      </button>
                      <button id="change-account-cancel" class="button is-hidden is-danger is-stylish is-small is-inverted">
                        <span>Cancel Changes</span>
                      </button>
                    </div>
                  </form>
                </div>

							</div>
              <div id="premium" class="is-hidden card is-fullwidth">
                <div class="card-header is-justified-start">
                  <h3 id="upgrade-tab-header" class="card-header-title">
                    <span>Premium Status</span>
                  </h3>
                  <a tabindex="0" class="button is-small margin-left-10 is-primary" href="/features#pricing">
                    <span class="icon is-small"><i class="fa fa-info-circle"></i></span>
                    <span>Learn More</span>
                  </a>
                </div>
                <div class="card-content">
                  <div class="control is-spaced is-mobile">
                    <div class="control-left">
                      <p>
                        Premium Status
                      </p>
                      <small id="renew-status" class="tip"></small>
                    </div>
                    <div class="control-right">
                      <a id="upgrade-button" class="is-small is-stylish margin-top-5 basic-elem button">
                        <span class="icon is-small">
                          <i class="fa fa-trophy"></i>
                        </span>
                        <span class="button-text">Upgrade</span>
                      </a>
                      <div class="premium-elem control">
                        <a id="cancel-premium-button" class="is-small margin-top-5 is-stylish is-hidden is-outlined button is-danger">
                          <span class="icon is-small">
                            <i class="fa fa-times-circle"></i>
                          </span>
                          <span>Cancel Plan</span>
                        </a>
                        <a id="renew-premium-button" class="is-small margin-top-5 is-stylish is-hidden is-outlined button is-primary">
                          <span class="icon is-small">
                            <i class="fa fa-repeat"></i>
                          </span>
                          <span>Renew Plan</span>
                        </a>
                      </div>
                    </div>
                  </div>


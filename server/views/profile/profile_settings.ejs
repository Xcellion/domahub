                      <label class="label">
                        <span class="v-align-middle">Card Number</span>
                      </label>
                      <div class="control is-grouped">
                        <p class="control has-icon">
                          <input id="cc-num" required tabindex="0" data-stripe="number" class="input stripe-input" type="tel" placeholder="•••• •••• •••• ••••" autocomplete="cc-number"/>
                          <i id="cc-icon" class="fa fa-credit-card"></i>
                        </p>
                      </div>
                    </div>

                    <div class="control">
                      <label class="label">
                        <span class="v-align-middle">Expiration Date</span>
                      </label>
                      <div class="control is-grouped">
                        <p class="control has-icon">
                          <input id="cc-exp" required tabindex="0" maxlength="7" data-stripe="exp" class="input stripe-input" type="tel" placeholder="•• / ••" autocomplete="cc-exp"/>
                          <i class="fa fa-calendar-o"></i>
                        </p>
                      </div>
                    </div>


<script src="/js/left_navbar_logic.js" type="text/javascript"></script>
<div class="left-menu">
  <div class="company-logo">
    <a class="dh-logo" tabindex="0" title="Home" href="/">
      <div class="flat-logo is-white is-hidden-tablet-only"></div>
      <div class="circle-logo is-white is-hidden-desktop"></div>
    </a>
  </div>
  <aside class="menu">
    <ul class="menu-list">
      <li class="menu-item has-icon">
        <a id="dashboard-left-tab" tabindex="0" title="View My Dashboard" href="/profile/dashboard" class="left-tab primary-theme">
          <span class="icon is-white"><i class="fa fa-window-maximize"></i></span>
          <p class="is-white is-hidden-tablet-only">Dashboard</p>
        </a>
      </li>
      <li class="menu-item has-icon">
        <a id="mylistings-left-tab" tabindex="0" title="View My Listings" href="/profile/mylistings" class="left-tab primary-theme">

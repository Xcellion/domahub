<!DOCTYPE html>

<html>

	<head>
		<title>DomaHub - Inbox</title>
		<%- include("templates/head_links"); %>
		<link rel="stylesheet" href="/css/profile.css" type="text/css" />
		<script src="/js/lib/moment.min.js" type="text/javascript"></script>
		<script type="text/javascript">
			//redirect to homepage if user is not defined
			var user = <% if(typeof user != "undefined"){ %><%-JSON.stringify(user)%><% }else{ %>window.location="/"<% } %>;
			var convo_list = <% if(typeof convo_list != "undefined"){ %><%-JSON.stringify(convo_list)%><% }else{ %>""<% } %>;
		</script>
		<script src="/js/routes/client_profile.js" type="text/javascript"></script>
	</head>

<body>
	<%- include("templates/navbar", {user: user}); %>

	<div class="container clear-nav-profile">
		<div class="tabs is-centered">
			<ul>
				<li><a href="/profile/dashboard">Dashboard</a></li>
				<li class="is-active"><a href="/profile/inbox">Inbox</a></li>
				<li><a href="/profile/mylistings">Listings</a></li>
				<li><a href="/profile/myrentals">Rentals</a></li>
				<li><a href="/profile/settings">Settings</a></li>
			</ul>
		</div>
	</div>

	<section class="section min-height">
		<div class="container">
			<div class="columns">
				<div class="column is-one-quarter">
					<nav class="panel">
						<a class="panel-block is-active">
							<p class="control has-icon has-icon-right">
								<input id="search-user" class="input" type="text" placeholder="Search messages" />
								<i class="fa fa-times is-hidden"></i>
							</p>
						</a>
						<div class="panel-list">

						</div>
					</nav>

					<div class="container bottom-margin-25">
						<a id="new-message" class="button is-accent is-medium is-fullwidth">Send a message</a>
					</div>

				</div>
				<%# <div class="column has-text-centered">
					<div class="box">
						Your inbox is currently empty.
					</div>
				</div>%>

				<div class="column is-three-quarter">
					<div class="box">
						<form action="/messages" method="post" id="messenger_form">
							<input id="msg_receiver_input" class="input" placeholder="To: "name="msg_receiver" type="text" />

							<div id="chat_wrapper" class=""></div>

							<div id="msg-text-wrapper">
								<textarea id="msg_text_input" class="textarea to-reset" name="msg_text"></textarea>
								<input id="msg_submit" value="Submit" class="button" type="submit" />
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>
	</section>

	<%- include("templates/footer"); %>
	<script src="/js/routes/profile_inbox_logic.js" type="text/javascript"></script>
</body>
</html>

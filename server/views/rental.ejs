<!DOCTYPE html>

<html>

	<head>
		<title>w3bbi</title>
		<link rel="stylesheet" href="/css/style_base.css" type="text/css" />
		<link rel="stylesheet" href="/css/rental.css" type="text/css" />
		<link rel="stylesheet" href="/css/fullcalendar.min.css" type="text/css" />
		<!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script> -->
		<script src="/js/jquery/jquery.js" type="text/javascript"></script>
		<script src="/js/moment/moment.min.js" type="text/javascript"></script>
		<script src="/js/fullcalendar.min.js" type="text/javascript"></script>
		<script type="text/javascript">
			var user = <% if(user){ %><%-JSON.stringify(user)%><% }else{ %>""<% } %>;
			var listing_info = <% if(listing_info){ %><%-JSON.stringify(listing_info)%><% }else{ %>""<% } %>;
			var rental_info = <% if(rental_info){ %><%-JSON.stringify(rental_info)%><% }else{ %>""<% } %>;
			var rental_details = <% if(rental_details){ %><%-JSON.stringify(rental_details)%><% }else{ %>""<% } %>;
			var new_listing_info = <% if(new_listing_info){ %><%-JSON.stringify(new_listing_info)%><% }else{ %>""<% } %>;
		</script>
		<script src="/js/rental.js" type="text/javascript"></script>
		<link rel="icon" type="image/ico" href="/images/favicon.ico">
	</head>
	
	<body>

		<div class="body_wrapper">
			
			<div id="w3bbi_wrapper">
				<div id="account_wrapper" class="w3bbi_content_wrapper">
					<% if (user) {%>
						<p>Logged in: <%= user.email %></p>
						<p><a href="/logout">Log Out</a></p>
					<% } else {%>
						<div id="form_wrapper">
						<form id="target" action="/login" method="post">
							<input name="email" placeholder="Email" type="text" id="email_input" autofocus>
							<input name="password" placeholder="Password" type="password" id="pw_input">
							<input id="submit" type="submit" value="Sign in">
						</form>
						<div id="signup_wrapper">
							<a id="signup" href="/signup">Create an account</a>
						</div>
					</div>
					<% } %>
					<a href="/">Home</a>
					<a href="/listing/<%=listing_info.domain_name%>">Back to calendar</a>
				</div>
				
				<div id="listing_wrapper" class="w3bbi_content_wrapper">
					<div>Listing Information:</div>
					<table>
						<th>Date Created</th>
						<th>Domain Name</th>
						<th>Owner Email</th>
						<th>Owner Name</th>
						<th>Price Type</th>
						<th>Set Price</th>
						<tr>  
							<td><%= listing_info.date_created %></td>  
							<td><%= listing_info.domain_name %></td>  
							<td><%= listing_info.email %></td>  
							<td><%= listing_info.fullname %></td>  
							<td><%= listing_info.price_type %></td>  
							<td><%= listing_info.set_price %></td>  
						</tr>                                   
					</table>
				</div>
			
				<div id="rental_wrapper" class="w3bbi_content_wrapper">
					<div>Rental Information</div>
					<% for (var x = 0; x < rental_info.length; x++) { %>
						<div>Start: <%=rental_info[x].start %></div>
						<div>End: <%=rental_info[x].end %></div>
					<% } %>
				</div>
			</div>
				
			<div id="rental_edit">
			
				<!-- if new rental -->
				<% if (new_listing_info) { %>
					<form id="listing_form" action="/listing/<%=listing_info.domain_name%>/new" method="post">
					<% if (new_listing_info.type == 0) { %>
						
					<% } else if (new_listing_info.type == 1) { %>
						<div>Type: <%=new_listing_info.type%></div>
						<div>Redirect to:</div>
						<input name="redirect" placeholder="http://redirect-here.com" type="url" id="url_input" autofocus>
					<% } %>
					
				<!-- if editing existing rental -->
				<% } else {%>
					<form id="listing_form" action="/listing/<%=listing_info.domain_name%>/<%=rental_info.rental_id%>" method="post">
					<div>Rental Details:</div>
					<% for (var x = 0; x < rental_details.length; x++){ %>
						<div class="rental_pair">
						<% for (var y in rental_details[x]) { %>
							<% if (rental_details[x].hasOwnProperty(y) && (y == "text_key" || y == "text_value")) { %>
								<div class="rental_value"><%= rental_details[x][y]%></div>
							<% } %>
						<% } %>
						</div>
					<% } %>
				<% } %>
			
					<input id="submit" type="submit" value="Submit">
				</form>
			</div>
		</div>

	</body>
	
</html>
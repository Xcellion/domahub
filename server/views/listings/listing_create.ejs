            </div>
          </div>%>

        </div>
      </div>
    </div>

    <!-- REGISTRAR MODAL -->
    <%- include("../templates/registrar_modal.ejs"); %>

  </section>

  <script src="/js/routes/listings/listing_create_logic.js" type="text/javascript"></script>
</body>

</html>

<section id="background_image" class="section listing-section" style="background-image:url('<%= listing_info.background_image %>')">
  <div class="img-wrapper">
    <div id="listing-hero" class="container">
      <div>

      </div>
      <div class="content has-text-centered">
        <a tabindex="1" href="http://<%= listing_info.domain_name %>">
        <h1 id="domain-display" class="title is-1 is-bold is-primary is-inline-block">
        <%= listing_info.domain_name %></h1></a>
        <h2 class="subtitle is-4 is-white margin-top-15">
        <% if (listing_info.status == 1) { %>
          Currently Available
          <% } else { %>
          Currently Unavailable
          <% } %>
        </h2>
      </div>
      <div class="columns margin-right-0">
        <div id="price-display-column" class="column is-4-tablet is-offset-8-tablet">
          <div id="price-display">
            <h2 id="price" class="is-black is-bold has-text-centered">
              <% if (listing_info.status == 1) { %>
                  $<%= listing_info.price_rate %> Per <%= listing_info.price_type.charAt(0).toUpperCase() + listing_info.price_type.substr(1) %>
              <% } else if (listing_info.available){ %>
                  Available for Purchase
              <% } else { %>
                  Request Listing
              <% } %>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="top-wrapper" class="min-height">
  <div class="container">
    <div class="columns flex-column-mobile margin-right-0">
      <div id="domain-modules-column" class="column is-8 order-2-mobile">

        <%# TRAFFIC MODULE %>
        <% if (listing_info.traffic){ %>
            <div class="content listing-module">
              <h2 class="margin-bottom-15">Listing Views</h2>
              <canvas id="traffic-chart"></canvas>
            </div>
        <% } %>

        <%# ALEXA MODULE %>
        <% if (listing_info.alexa){ %>
            <%- include("modules/alexa_module.ejs", {
              listing_info : listing_info
            }); %>
        <% } %>

        <%# DEMOGRAPHIC MODULE %>
        <%- include("modules/demographic_module.ejs", {
          listing_info : listing_info
        }); %>

        <%# RENTALS MODULE %>
        <%- include("modules/rentals_module.ejs", {
          listing_info : listing_info
        }); %>

        <%# SIMILAR DOMAINS MODULE %>
        <%- include("modules/similar_domains_module.ejs", {
          listing_info : listing_info
        }); %>

      </div>
      <div id="domain-info-column" class="column is-4 order-1-mobile">
        <div id="checkout-card" class="card">
          <div class="card-content">
            <div class="content">
              <% if (listing_info.status == 1) { %>

                  <%# CHECKOUT MODULE (RENT NOW) %>
                  <%- include("modules/checkout_module.ejs", {
                      user : user,
                      listing_info : listing_info
                  }); %>

              <% } else { %>
                <p>
                    This domain is currently unavailable. Please try again at a later time!
                </p>
              <% } %>
            </div>
          </div>
          <footer class="card-footer">
            <% if (listing_info.status == 1) { %>
              <a id="more-info-button" tabindex="1" class="card-footer-item no-border has-icon is-hidden-desktop">
                <span>Show Listing Details</span>
                <span class="icon is-small">
                  <i class="fa fa-angle-down"></i>
                </span>
              </a>
              <a id="less-info-button" tabindex="1" class="card-footer-item has-icon is-hidden">
                <span>Hide Listing Details</span>
                <span class="icon is-small">
                  <i class="fa fa-angle-up"></i>
                </span>
              </a>

              <%# SOCIAL SHARE MODULE %>
                <!-- <a tabindex="1" class="card-footer-item has-icon">
                  <span class="icon is-small">
                    <i class="fa fa-bookmark"></i>
                  </span>
                  <span>Save</span>
                </a>
                <a tabindex="1" class="card-footer-item has-icon">
                  <span class="icon is-small">
                    <i class="fa fa-flag"></i>
                  </span>
                  <span>Report</span>
                </a>
                <a tabindex="1" class="card-footer-item has-icon">
                  <span class="icon is-small">
                    <i class="fa fa-share-alt"></i>
                  </span>
                  <span>Share</span>
                </a> -->

            <% } %>
          </footer>
        </div>
        <div id="description-card" class="card margin-bottom-25">
          <div class="card-content">

          <%# OWNERS NOTES MODULE %>
          <% if (listing_info.description) { %>
              <%- include("modules/owners_notes_module.ejs", {
                listing_info : listing_info
              }); %>
          <% } %>

          <%# CATEGORIES MODULE %>
          <% if (listing_info.categories) { %>
              <div class="content listing-info">
                  <h3 class="is-bold margin-bottom-15">Categories</h3>
                  <div class="is-flex-wrap">
                  <% var categories_array = listing_info.categories.split(" ")
                  for (var i = 0; i < categories_array.length; i++) { %>
                      <span class="tag is-accent"><%= categories_array[i].charAt(0).toUpperCase() + categories_array[i].substr(1); %></span>
                  <% } %>
                  </div>
              </div>
          <% } %>

            <%# LISTING OWNER MODULE %>
            <%- include("modules/listing_owner_module.ejs", {
              listing_info : listing_info
            }); %>

            <%# OTHER BY SAME OWNER DOMAINS MODULE %>
            <%- include("modules/other_domains_module.ejs", {
              listing_info : listing_info
            }); %>

          </div>
          <footer class="card-footer">
              <a id="less-info-button" tabindex="1" class="card-footer-item has-icon is-hidden">
                  <span>Hide Listing Details</span>
                  <span class="icon is-small">
                      <i class="fa fa-angle-up"></i>
                  </span>
              </a>
          </footer>
        </div>
        <div id="trending-card" class="card">

        </div>
      </div>
    </div>
  </div>
</section>

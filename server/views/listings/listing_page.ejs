<section class="section is-medium-top">
  <!--style="background-image:url('<%= listing_info.background_image %>')"  -->
    <div class="container">
      <div id="error-notification" class="notification is-popup is-danger">
        <span class="delete"></span>
        <p id="notification-text" class="is-white">

        </p>
      </div>
        <span id="price" class="tag is-bold is-medium is-bordered">
          <% if (listing_info.status == 1) { %>
              $<%= listing_info.price_rate %> Per <%= listing_info.price_type.charAt(0).toUpperCase() + listing_info.price_type.substr(1) %>
          <% } else if (listing_info.available){ %>
              Available for Purchase
          <% } else { %>
              Request Listing
          <% } %>
        </span>
        <div id="domain-display" class="content margin-bottom-40">
          <h1 class="is-primary is-inline-block margin-bottom-0"><%= listing_info.domain_name %>/</h1>
          <form id="path-input" class="is-inline-block">
            <div class="control margin-bottom-0">
              <input id="typed-slash" tabindex="1" type="text" autocomplete="off"></input>
              <label class="input-tooltip" for="typed-slash"><span class="triangle"></span>Click here to edit.</label>
            </div>
          </form>
        </div>
        <div class="content">
          <% if (listing_info.description) { %>
            <%- include("modules/owners_notes_module.ejs", {
              listing_info : listing_info
            }); %>
          <% } %>
          <div class="control">
            <button form="path-input" class="button is-stylish is-primary v-align-middle" type="submit">Check Availability</button>
          </div>
        </div>
    </div>
</section>

<section class="section is-medium">
  <div class="container">
    <%# EXAMPLES MODULE %>
    <% if (listing_info.rentals.length > 0){ %>
        <%- include("modules/rentals_examples_module.ejs", {
          listing_info : listing_info
        }); %>
    <% } %>
  </div>
</section>

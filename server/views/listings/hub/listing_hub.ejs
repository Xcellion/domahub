		<div id="offer-modal" class="modal">
		  <div class="modal-background"></div>
		  <div class="modal-container">
		    <div class="modal-content is-small">
		      <div class="content has-text-centered">
		        <p class="is-bold">Make Offer</p>
		      </div>
					<div class="control">
						<form id="buy-now-form" autocomplete="off" method="post" action="/listing/<%= listing_info.domain_name %>/contact" >
							<label class="error_message label" for="contact_name">Name</label>
				      <div class="control has-icon">
				        <input id="contact_name" placeholder="John Smith" required class="contact-input input" name="contact_name" type="text">
				        <div class="icon">
				          <i class="far fa-user-alt"></i>
				        </div>
				      </div>
							<label class="error_message label" for="contact_email">Email Address</label>
				      <div class="control has-icon">
				        <input id="contact_email" placeholder="john@smith.com" required class="contact-input input" name="contact_email" type="email">
				        <div class="icon">
				          <i class="far fa-envelope"></i>
				        </div>
				      </div>
							<label class="error_message label" for="contact_phone">Phone</label>
				      <div class="control has-icon">
				        <input id="contact_phone" required class="contact-input input phone-number" name="contact_phone" type="tel">
				      </div>
							<label class="error_message label" for="contact_offer">Offer in USD<span id="min-price"></span></label>
				      <div class="control has-icon">
				        <input id="contact_offer" required class="contact-input input" name="contact_offer" type="number" placeholder="<%= (listing_info.min_price == 0) ? "" : listing_info.min_price %>" min="<%= (listing_info.min_price == 0) ? "" : listing_info.min_price %>">
				        <div class="icon">
				          <i class="far fa-usd-circle"></i>
				        </div>
				      </div>
							<label class="error_message label" for="contact_message">Message</label>
				      <div class="control">
				        <textarea id="contact_message" required class="contact-input textarea" name="contact_message" placeholder="Hey! I'm interested in buying <%= listing_info.domain_name %>. Let's chat."></textarea>
				      </div>
				    </form>
					</div>
		      <div class="control is-expanded">
	          <a id="submit-offer-button" tabindex="0" class="button is-fullwidth is-primary is-stylish">
	            <div class="icon is-small"><i class="far fa-check-circle"></i></div>
	            <span>Submit Offer</span>
	          </a>
		      </div>
		    </div>
		  </div>
		  <button class="modal-close"></button>
		</div>

		<%- include("../listing_footer.ejs") %>

    <script src="/js/routes/listings/hub/listing_hub_logic.js" type="text/javascript"></script>
    <script src="/js/routes/listings/hub/hub_theming.js" type="text/javascript"></script>

  </body>

  </html>

<html>

	<head>
		<title>Domain Hub</title>
		<link rel="stylesheet" href="/css/min/marketplace.min.css" type="text/css" />
    <%- include("../../templates/head_links", {user: user});%>
	</head>

	<body id="page-contents" class="is-hidden">

    <script src="/js/lib/moment.min.js" type="text/javascript"></script>
    <script src="/js/lib/wNumb.js" type="text/javascript"></script>
    <script type="text/javascript">
      var listing_info = <% if(typeof listing_info != "undefined"){ %><%-JSON.stringify(listing_info)%><% }else{ %>""<% } %>;
      var compare = <% if(typeof compare != "undefined"){ %><%-JSON.stringify(compare)%><% }else{ %>""<% } %>;
      var categories = <% if(typeof categories != "undefined"){ %><%-JSON.stringify(categories)%><% }else{ %>""<% } %>;
    </script>

    <section class="hero is-medium gradient-left-right">

			<div class="hero-head">
        <nav class="nav">
          <div class="nav-left">
						<a class="nav-item">
							<figure class="image is-32x32">
								<img src="/images/dh-assets/circle-logo/dh-circle-logo-white.png" />
							</figure>
						</a>
          </div>
          <div class="nav-center">

          </div>
          <div class="nav-right nav-menu">
            <a class="nav-item" href="mailto:<%= listing_info.owner_email %>">
              <%= listing_info.owner_email %>
            </a>
            <a class="nav-item">
              212-503-6773
            </a>
            <span class="nav-item">
              <a class="button is-primary is-inverted is-stylish is-small">
								<span class="icon"><i class="far fa-shopping-cart"></i></span>
                <span>Checkout</span>
              </a>
            </span>
          </div>
        </nav>
      </div>

      <div class="hero-body min-height">
        <div class="container">
          <div class="content has-text-centered">
            <h1 class="title is-1 is-primary">Hot, fresh domains</h1>
						<p class="subtitle is-5">
							<%= listing_info.description %>
						</p>
          </div>
        </div>
      </div>

    </section>

    <section class="section is-small is-pastel">
      <div class="container">
				<div class="control has-addons" style="max-width:500px;margin-left:auto;margin-right:auto;">
					<input id="search-domain-main" class="input is-stylish has-shadow is-medium" type="text" placeholder="Search domains..."/>
					<input id="search-domain-tld" class="input is-stylish has-shadow is-medium" type="text" value=".com" style="max-width:100px;"/>
				</div>
				<div class="control is-spaced is-mobile">
					<div class="control-left">
						<p id="total-domain-count"></p>
					</div>
					<div class="control-right">
						<div class="select is-stylish has-shadow no-borders">
							<select id="categories-select">
                <option value="" selected>
                  All Categories
                </option>
              </select>
						</div>
						<div class="select is-stylish has-shadow no-borders">
							<select id="views-select">
								<option value="" selected disabled>
                  Select View
                </option>
                <option value="">
                  Table View
                </option>
								<option value="">
                  Grid View
                </option>
              </select>
						</div>
						<div class="is-inline is-hidden-tablet" data-balloon="Switch View" data-balloon-pos="up">
	            <button id="layout-button" class="button is-icon">
	              <div class="icon">
	                <i class="far fa-list"></i>
	              </div>
	            </button>
						</div>
						<button id="prev-page" class="is-disabled page-button button is-black is-inverted is-icon">
							<div class="icon">
								<i class="far fa-angle-left"></i>
							</div>
						</button>
						<button id="next-page" class="is-disabled page-button button is-black is-inverted is-icon">
							<div class="icon">
								<i class="far fa-angle-right"></i>
							</div>
						</button>
					</div>
				</div>
      </div>
    </section>

		<section class="section is-medium-top is-pastel">
			<div class="container">
				<table id="domains-table" class="domains-table is-hidden table is-transparent-head">
					<thead>
						<tr>
							<th colspan="1"></th>
							<th class="sort-header" data-sort-by="domain_name" colspan="2">
                <span>Domain Name</span>
                <div class="icon is-small"><i class="far fa-sort" data-fa-transform="down-2"></i></div>
              </th>
							<th class="sort-header" data-sort-by="buy_price" colspan="1">
                <span>Buy It Now Price</span>
                <div class="icon is-small"><i class="far fa-sort" data-fa-transform="down-2"></i></div>
              </th>
							<th class="sort-header" data-sort-by="min_price" colspan="1">
                <span>Minimum Price</span>
                <div class="icon is-small"><i class="far fa-sort" data-fa-transform="down-2"></i></div>
              </th>
							<th class="sort-header" data-sort-by="price_rate" colspan="1">
                <span>Rent</span>
                <div class="icon is-small"><i class="far fa-sort" data-fa-transform="down-2"></i></div>
              </th>
						</tr>
					</thead>
					<tbody id="domain-table-body">
						<tr id="clone-row" class="is-hidden table-row">
							<td colspan="1" class="img-col">
								<figure class="image is-48x48 left-aligned">
									<img class="domain-row-logo" alt="Domain Logo"/>
								</figure>
							</td>
							<td colspan="2" class="domain-col">
								<p class="domain-row-domain"></p>
							</td>
							<td colspan="1" class="bin-col">
								<div class="control-item">
									<span class="tag is-primary is-dot"></span>
									<p class="domain-row-bin"></p>
								</div>
							</td>
							<td colspan="1" class="min-col">
								<div class="control-item">
									<span class="tag is-accent is-dot"></span>
									<p class="domain-row-min"></p>
								</div>
							</td>
							<td colspan="1" class="rent-col">
                <div class="control-item">
                  <span class="tag is-info is-dot"></span>
                  <p class="domain-row-rent"></p>
                </div>
              </td>
							<td colspan="1" class="misc-col">
								<button class="button no-shadow is-icon is-transparent is-black misc-button">
									<div class="icon"><i class="far fa-ellipsis-h"></i></div>
								</button>
								<div class="misc-options is-hidden">
									<ul>
                    <li>
											<div class="icon is-white is-small">
												<i class="far fa-comment"></i>
											</div>
										</li>
										<li>
											<div class="icon is-white is-small">
												<i class="far fa-share"></i>
											</div>
										</li>
										<li>
											<div class="icon is-white is-small">
												<i class="far fa-exclamation-circle"></i>
											</div>
										</li>
									</ul>
								</div>
							</td>
						</tr>
					</tbody>
				</table>
        <table id="no-domains-table" class="domains-table is-hidden table is-transparent-head">
          <tbody>
            <tr class="no-hover-effect">
              <td>
                <div>
                  <div class="nothing-exists-row has-text-centered">
                    <img src="/images/lib/ggface.png">
                    <p>Oh, no! There are no matching domains!</p>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
        <table id="loading-domains-table" class="domains-table table is-transparent-head">
          <tbody>
            <tr class="no-hover-effect">
              <td>
                <div>
                  <div class="nothing-exists-row has-text-centered">
                    <p class="icon is-medium"><i class="far fa-spin fa-sync-alt"></i></p>
                    <p>Now loading domains.</p>
                    <p>This may take some time.</p>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
			</div>
		</section>

		<section class="section is-pastel is-medium">
			<div class="container">
				<div id="domains-grid" class="columns">
					<div class="column is-3">
						<div class="card has-shadow-effect cursor-pointer">
							<div class="card-image">
								<figure class="image is-2by1">
									<img src="/images/dh-assets/dh-features-twitter.png" />
								</figure>
							</div>
							<div class="card-content is-relative">
								<p class="break-all">
									DomaHub.com
								</p>
								<div class="price-tag">
									$2,500
								</div>
							</div>
						</div>
					</div>
					<div class="column is-3">
						<div class="card has-shadow-effect cursor-pointer">
							<div class="card-image">
								<figure class="image is-2by1">
									<img src="http://via.placeholder.com/300x150" />
								</figure>
							</div>
							<div class="card-content">
								<div class="control is-spaced">
									<div class="control-left">

									</div>
									<div class="control-right">

									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="column is-3">
						<div class="card has-shadow-effect cursor-pointer">
							<div class="card-image">
								<figure class="image is-2by1">
									<img src="http://via.placeholder.com/300x150" />
								</figure>
							</div>
							<div class="card-content">
								<div class="control is-spaced">
									<div class="control-left">

									</div>
									<div class="control-right">

									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="column is-3">
						<div class="card has-shadow-effect cursor-pointer">
							<div class="card-image">
								<figure class="image is-2by1">
									<img src="http://via.placeholder.com/300x150" />
								</figure>
							</div>
							<div class="card-content">
								<div class="control is-spaced">
									<div class="control-left">

									</div>
									<div class="control-right">

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<%- include("../listing_footer.ejs") %>

    <script src="/js/routes/listings/hub/listing_hub_logic.js" type="text/javascript"></script>
    <script src="/js/routes/listings/hub/hub_theming.js" type="text/javascript"></script>

  </body>

  </html>

<!DOCTYPE html>
<html>
<head>
  <title><%= domain_name %> - Domain Ownership Transfer Verification</title>
  <%- include("../templates/head_links.ejs"); %>
  <script type="text/javascript">
      var domain_name = <% if(typeof domain_name != "undefined"){ %><%-JSON.stringify(domain_name)%><% }else{ %>""<% } %>;
      var verification_code = <% if(typeof verification_code != "undefined"){ %><%-JSON.stringify(verification_code)%><% }else{ %>""<% } %>;
  </script>
</head>

<body>

  <section class="section is-medium min-height">
      <div class="container">
        <div class="columns">
          <div class="column is-6 is-offset-3">
            <div class="box content has-text-centered">
              <h2>
                  Complete your purchase of <%= domain_name %>!
              </h2>
              <p>
                Please verify that the domain has been transferred to you by
                clicking the button below.
              </p>
              <p>
                  <a id="main_button" class='button is-primary'>I own <%= domain_name %>.</a>
              </p>

              <div id="error-message" class="is-hidden notification is-danger">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                  </span>
                  Something went wrong with the verifcation! Please refresh the page and try again.
              </div>
              <div id="success-message" class="is-hidden notification is-primary">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-check" aria-hidden="true"></i>
                  </span>
                  <span id="success-message-text"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>

  <script src="/js/routes/listings/transfer_verify_logic.js" type="text/javascript"></script>
</body>
</html>

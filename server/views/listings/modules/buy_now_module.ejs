<link rel="stylesheet" href="/css/lib/intlTelInput.css" type="text/css">
<script src="/js/jquery/intlTelInput.min.js" type="text/javascript"></script>

<div id="buy-now-module" class="top-module post-buy-module">
    <div class="description-text">
        <form id="buy-now-form" method="post" action="/listing/<%= listing_info.domain_name %>/contact" >
          <label class="error_message label" for="contact_name">Name</label>
          <p class="control has-icon">
            <input id="contact_name" required class="contact-input input" name="contact_name" type="text">
            <i class="fa fa-user-circle-o"></i>
          </p>
          <label class="error_message label" for="contact_email">Email Address</label>
          <p class="control has-icon">
            <input id="contact_email" required class="contact-input input" name="contact_email" type="email">
            <i class="fa fa-envelope"></i>
          </p>
          <label class="error_message label" for="contact_phone">Phone</label>
          <p class="control has-icon">
            <input id="contact_phone" required class="padding-left-50 contact-input input" name="contact_phone" type="tel">
          </p>
          <label class="error_message label" for="contact_offer">Offer in USD<span id="min-price"></span></label>
          <p class="control has-icon">
            <input id="contact_offer" required class="contact-input input" name="contact_offer" type="number" placeholder="<%= (listing_info.buy_price == 0) ? "" : listing_info.buy_price %>" min="<%= (listing_info.buy_price == 0) ? "" : listing_info.buy_price %>">
            <i class="fa fa-money"></i>
          </p>
          <label class="error_message label" for="contact_message">Message</label>
          <p class="control">
            <textarea id="contact_message" required class="contact-input textarea" name="contact_message" placeholder="Hey! I'm interested in buying <%= listing_info.domain_name %>. Let's chat."></textarea>
          </p>

          <div class='control'>
              <button id="buy-now-submit" name="offer" type="submit" class="margin-bottom-15 contact-input button is-primary is-stylish">
                  Send Offer
              </button>

              <% if (listing_info.buyable) { %>
                  <button id="buy-button" name="buy" type="submit" class='margin-bottom-15 is-hidden is-accent button is-stylish contact-input'>Buy now</button>
              <% } %>

              <div>
                  <a id="why-somuch" class="is-accent" data-balloon="By providing all of your contact information, you increase the likelihood of your purchase. Nobody likes responding to fake accounts or bots!" data-balloon-length="large" data-balloon-pos="up">
                      Do I need to give all this information?
                  </a>
              </div>
              <div id="contact-success" class="margin-top-15 is-hidden notification is-success">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-check-circle" aria-hidden="true"></i>
                  </span>
                  Success! Please check your email for further instructions.
              </div>
              <div id="contact-success-compare" class="margin-top-15 is-hidden notification is-success">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-check-circle" aria-hidden="true"></i>
                  </span>
                  Success! If this were your real domain, you would receive a notification with the details of this new offer.
              </div>
              <div id="contact-error" class="margin-top-15 is-hidden notification is-danger">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                  </span>
                  <span id="contact-error-message">Something went wrong! Please refresh the page and try again.</span>
              </div>
          </div>

        </form>
    </div>
</div>

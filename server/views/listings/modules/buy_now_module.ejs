<link rel="stylesheet" href="/css/lib/intlTelInput.css" type="text/css">
<script src="/js/jquery/intlTelInput.min.js" type="text/javascript"></script>

<div id="buy-now-module" class="top-module module post-buy-module">
    <div class="description-text">
        <form id="buy-now-form" method="post" action="/listing/<%= listing_info.domain_name %>/contact" >
          <label class="error_message label">Name</label>
          <p class="control has-icon">
            <input id="contact_name" required class="contact-input input" name="contact_name" type="text">
            <i class="fa fa-user-circle-o"></i>
          </p>
          <label class="error_message label">Email Address</label>
          <p class="control has-icon">
            <input id="contact_email" required class="contact-input input" name="contact_email" type="email">
            <i class="fa fa-envelope"></i>
          </p>
          <label class="error_message label">Phone</label>
          <p class="control has-icon">
            <input id="contact_phone" required class="padding-left-50 contact-input input" name="contact_phone" type="tel">
          </p>
          <label class="error_message label">Offer in USD</label>
          <p class="control has-icon">
            <input id="contact_offer" required class="contact-input input" name="contact_offer" type="number" placeholder="<%= (listing_info.buy_price == 0) ? "" : listing_info.buy_price %>" min="<%= (listing_info.buy_price == 0) ? "" : listing_info.buy_price %>">
            <i class="fa fa-money"></i>
          </p>
          <label class="error_message label">Message</label>
          <p class="control">
            <textarea id="contact_message" required class="contact-input textarea" name="contact_message" placeholder="Hey! I'm interested in buying <%= listing_info.domain_name %>. Let's chat."></textarea>
          </p>

          <div class='control'>
              <button id="buy-now-submit" type="submit" class="margin-bottom-10 contact-input button is-accent is-stylish">
                  Send Offer
              </button>
              <a id="why-somuch" class="is-block is-accent margin-bottom-10" data-balloon="By providing all of your contact information, you increase the likelihood of your purchase. Nobody likes responding to fake accounts or bots!" data-balloon-length="large" data-balloon-pos="up">
                Do I need to give all this information?
              </a>
              <div id="contact-success" class="is-hidden notification is-success">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-check-circle" aria-hidden="true"></i>
                  </span>
                  Success! Please check your email for further instructions.
              </div>
              <div id="contact-error" class="is-hidden notification is-danger">
                  <button class="delete"></button>
                  <span class="icon is-small">
                      <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                  </span>
                  <span id="contact-error-message">Something went wrong! Please refresh the page and try again.</span>
              </div>
          </div>

        </form>
    </div>
</div>

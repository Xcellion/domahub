<link rel="stylesheet" href="/css/lib/intlTelInput.css" type="text/css">
<script src="/js/jquery/intlTelInput.min.js" type="text/javascript"></script>

<div id="buy-now-module" class="top-module post-buy-module">
  <div class="description-text">
    <form id="buy-now-form" autocomplete="off" method="post" action="/listing/<%= listing_info.domain_name %>/contact" >
      <label class="error_message label" for="contact_name">Name</label>
      <p class="control has-icon">
        <input id="contact_name" required class="contact-input input" name="contact_name" type="text">
        <i class="fa fa-user-o"></i>
      </p>
      <label class="error_message label" for="contact_email">Email Address</label>
      <p class="control has-icon">
        <input id="contact_email" required class="contact-input input" name="contact_email" type="email">
        <i class="fa fa-envelope-o"></i>
      </p>
      <label class="error_message label" for="contact_phone">Phone</label>
      <p class="control has-icon">
        <input id="contact_phone" required class="contact-input input phone-number" name="contact_phone" type="tel">
      </p>
      <label class="error_message label" for="contact_offer">Offer in USD<span id="min-price"></span></label>
      <p class="control has-icon">
        <input id="contact_offer" required class="contact-input input" name="contact_offer" type="number" placeholder="<%= (listing_info.min_price == 0) ? "" : listing_info.min_price %>" min="<%= (listing_info.min_price == 0) ? "" : listing_info.min_price %>">
        <i class="fa fa-money"></i>
      </p>
      <label class="error_message label" for="contact_message">Message</label>
      <p class="control">
        <textarea id="contact_message" required class="contact-input textarea" name="contact_message" placeholder="Hey! I'm interested in buying <%= listing_info.domain_name %>. Let's chat."></textarea>
      </p>

      <div class="control-wrapper">
        <button id="buy-now-submit" name="offer" type="submit" class="contact-input button is-primary is-stylish">
          <span class="icon is-small"><i class="fa fa-paper-plane-o"></i></span>
          <span>Send offer</span>
        </button>

        <% if (listing_info.buy_price > 0) { %>
          <button id="buy-button" name="buy" type="submit" class='is-accent button is-stylish contact-input'>
            <span class="icon is-small"><i class="fa fa-shopping-cart"></i></span>
            <span id="buy-button-text">Buy Now</span>
          </button>
        <% } %>
      </div>

      <div class="content">
        <p id="why-somuch" class="is-info"
        data-balloon="By providing all of your contact information, you increase the likelihood of your purchase. Nobody likes responding to fake accounts or bots!"
        data-balloon-length="large" data-balloon-pos="down">
          Do I need to give all this information?
        </p>
      </div>

    </form>
  </div>
</div>

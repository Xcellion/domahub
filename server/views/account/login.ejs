<!DOCTYPE html>
<html>
  <head>
    <title>Log in - DomaHub</title>
    <link rel="stylesheet" type="text/css" href="/css/min/login_signup.min.css" />
    <%- include("../templates/head_links.ejs"); %>
  </head>
  <body>
    <%- include("../templates/google_tag_manager"); %>
    <%- include("../templates/notifications.ejs"); %>

    <div class="content has-text-centered clear-nav">
      <a class='is-inline-block flat-logo is-primary' tabindex="0" title="Home" href="/"></a>
    </div>
    <div class="account-form">
      <form id="login-form" action="/login" method="post">
        <label class="label" for="email">Email</label>
        <div class="control has-icon">
          <input required id="email" autofocus class="input is-medium" name="email" type="email" placeholder="Email" spellcheck="false">
          <div class="icon">
            <i class="far fa-envelope"></i>
          </div>
        </div>
        <label class="label" for="password">Password</label>
        <div class="control has-icon">
          <input required id="password" class="input is-medium" name="password" type="password" placeholder="Password">
          <div class="icon">
            <i class="far fa-lock"></i>
          </div>
        </div>
        <div class="control">
          <button id="login-button" class="login-button button is-primary is-stylish is-fullwidth">
            <div class="icon">
              <i class="far fa-sign-in"></i>
            </div>
            <span>Log In</span>
          </button>
        </div>
        <div class="control is-spaced">
          <div class="checkbox-form control-left">
            <input id="remember-checkbox" type="checkbox" class="v-align-middle" tabindex="0" />
            <label for="remember-checkbox" class="v-align-middle">Remember Me</label>
          </div>
          <div class="control-right">
            <a class="forgot is-primary is-underlined" href="/forgot">Forgot password?</a>
          </div>
        </div>
        <div class="control has-text-centered">
          <small>
            Don't have an account?
          </small>
          <small class="is-block">
            <a tabindex="0" class="is-primary is-underlined" href="/signup">Sign Up</a>
          </small>
        </div>
      </form>
    </div>
    <script src="/js/routes/account/account_login_logic.js" type="text/javascript"></script>
  </body>
</html>

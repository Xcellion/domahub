<!DOCTYPE html>
<html>
  <head>
    <title>Log in - DomaHub</title>
    <link rel="stylesheet" type="text/css" href="/css/min/login_signup.min.css" />
    <%- include("../templates/head_links.ejs"); %>
  </head>

  <body>
    <div class="content has-text-centered clear-nav">
      <h2 class="margin-bottom-5 has-text-centered">
          <a class='is-inline-block flat-logo is-primary' tabindex="0" title="Home" href="/">
              <div class='is-inline-block flat-logo is-primary'></div>
          </a>
      </h2>
        <% if (typeof message != "undefined") {%>
            <p id="message" class="is-danger has-text-centered margin-top-0 margin-bottom-15"><%= message %></p>
        <% } else { %>
            <p>
              Please log in below.
            </p>
        <% } %>
    </div>

    <div id="login-form" class="account-form">
      <form id="target" action="/login" method="post">
        <label class="label">Email</label>
        <p class="control has-icon">
          <input id="email" autofocus class="input is-medium" name="email" type="email" placeholder="Email" spellcheck="false">
          <i class="fa fa-envelope-o"></i>
        </p>
        <label class="label">Password</label>
        <p class="control has-icon">
          <input id="password" class="input is-medium" name="password" type="password" placeholder="Password">
          <i class="fa fa-lock"></i>
        </p>
        <p class="control">
          <button id="login-button" class="login-button button is-primary is-stylish is-fullwidth">
            Log In
          </button>
        </p>
        <div class="control is-spaced">
          <div class="checkbox-form">
            <input id="remember-checkbox" type="checkbox" class="v-align-middle" tabindex="0" />
            <label for="remember-checkbox" class="v-align-middle">Remember Me</label>
          </div>
          <p class="control">
              <a class="forgot is-primary" href="/forgot">Forgot password?</a>
          </p>
        </div>
        <div class="control has-text-centered">
          <p>
            Don't have an account?
          </p>
          <a tabindex="0" class="is-primary" href="/signup">Sign Up</a>
        </div>
      </form>
    </div>

  <%- include("../templates/js_scripts"); %>
  <script src="/js/routes/account/account_login_logic.js" type="text/javascript"></script>

  </body>

</html>

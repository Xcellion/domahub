<!DOCTYPE html>
<html>
  <head>
    <title>Verify My Account - DomaHub</title>
    <link rel="stylesheet" type="text/css" href="/css/min/login_signup.min.css" />
    <%- include("../templates/head_links"); %>
  </head>

  <body>
      <div class="content has-text-centered clear-nav">
        <h2 class="margin-bottom-5 has-text-centered">
            <a class='is-inline-block flat-logo is-primary' tabindex="1" title="Home" href="/">
                <div class='is-inline-block flat-logo is-primary'></div>
            </a>
        </h2>
          <% if (typeof message != "undefined") {%>
              <p id="message" class="has-text-centered margin-top-0 margin-bottom-15"><%= message %></p>
          <% } %>
      </div>

    <div id="login-form" class="account-form">
        <form id="target" method="post">
          <div id="message" class="has-text-centered margin-bottom-15">
            <% if (typeof message != "undefined") {%>
              <%= message %>
            <% } else {%>
                Click below to send an email to verify your account!
            <% } %>
        </div>

        <div id="form_to_hide">
            <p class="control">
                <button id="login-button" class="login-button button is-primary is-medium is-fullwidth">
                    Verify your account
                </button>
            </p>
        </div>

        <div id="accept">
            <a id="login-button" class="login-button button is-primary is-medium is-fullwidth" href="/login">
                Log in
            </a>
        </div>

        </form>
    </div>

  <%- include("../templates/js_scripts"); %>
  <script src="/js/routes/account/account_verify_request_logic.js" type="text/javascript"></script>

  </body>

</html>

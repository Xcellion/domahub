<!DOCTYPE html>
<html>
	<head>
		<title>Sign Up - DomaHub</title>
		<link rel="stylesheet" href="/css/min/login_signup.min.css" type="text/css" />
		<%- include("../templates/head_links.ejs"); %>
	</head>
<body>

	<div class="content has-text-centered clear-nav">
		<h2 class="margin-bottom-5 has-text-centered">
            <a id="nav-logo" class='is-inline-block flat-logo is-primary' tabindex="1" title="Home" href="/">
                <div class='is-inline-block flat-logo is-primary'></div>
            </a>
        </h2>
		<% if (typeof message != "undefined") {%>
			<p id="message" class="has-text-centered margin-top-0 margin-bottom-15"><%= message %></p>
		<% } %>
	</div>

	<div id="signup-form" class="account-form">
		<form id="target" method="post" autocomplete="off">
			<label class="label">Email</label>
				<p class="control has-icon has-icon-right">
					<input required class="input is-medium" autofocus name="email" type="email" id="email-input" spellcheck="false" value="" />
					<i class="fa fa-check is-hidden is-success"></i>
					<i class="fa fa-warning is-hidden is-danger"></i>
				</p>
			<label class="label">Username</label>
				<p class="control has-icon has-icon-right">
					<input required class="input is-medium" name="username" type="text" id="username-input" spellcheck="false" value="" />
					<i class="fa fa-check is-hidden is-success"></i>
					<i class="fa fa-warning is-hidden is-danger"></i>
				</p>
			<label class="label">Password (at least 6 characters)</label>
				<p class="control has-icon has-icon-right">
					<input required class="input is-medium" name="password" type="password" id="pw-input" autocomplete="new-password" value="" />
					<i class="fa fa-check is-hidden is-success"></i>
					<i class="fa fa-warning is-hidden is-danger"></i>
				</p>
			<label class="label">Confirm Password</label>
				<p class="control has-icon has-icon-right">
					<input required class="input is-medium" name="verify-pw" type="password" id="verify-pw" value="" />
					<i class="fa fa-check is-hidden is-success"></i>
					<i class="fa fa-warning is-hidden is-danger"></i>
				</p>
			<label class="label">Country</label>
				<p class="control">
					<span class="select is-medium is-fullwidth">
						<select required name="country" id="country-input">
							<option value="US">United States</option>
							<option value="CA">Canada</option>
							<option value="AU">Australia</option>
							<option value="AT">Austria</option>
							<option value="DK">Denmark</option>
							<option value="BE">Belgium</option>
							<option value="FI">Finland</option>
							<option value="DE">Germany</option>
							<option value="FR">France</option>
							<option value="HK">Hong Kong</option>
							<option value="IE">Ireland</option>
							<option value="IT">Italy</option>
							<option value="JP">Japan</option>
							<option value="LU">Luxembourg</option>
							<option value="NO">Norway</option>
							<option value="NL">Netherlands</option>
							<option value="SG">Singapore</option>
							<option value="NZ">New Zealand</option>
							<option value="ES">Spain</option>
							<option value="PT">Portugal</option>
							<option value="SE">Sweden</option>
							<option value="CH">Switzerland</option>
							<option value="GB">United Kingdom</option>
						</select>
					</span>
				</p>

			<div class="g-recaptcha" data-sitekey="6LdwpykTAAAAAEaTl3u4-xDCSqH7-Aj-YDImCQXI"></div>

			<p class="control">
				<button id="signup-login-button" class="login-button button is-primary is-stylish is-fullwidth">
					Create Account
				</button>
			</p>
			<p class="control">
				<p class="has-text-centered">
					Already have an account?
				</p>
				<p class="has-text-centered">
					<a class="is-accent" href="/login">Sign In Now</a>
				</p>
			</p>
		</form>
	</div>

  <%- include("../templates/js_scripts"); %>
	<script src="/js/routes/account/account_signup_logic.js" type="text/javascript"></script>
	<script src='https://www.google.com/recaptcha/api.js'></script>
</body>

</html>

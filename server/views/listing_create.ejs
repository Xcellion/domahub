<!-- user profile page, should not see unless logged in -->

<!DOCTYPE html>

<html>

	<head>
		<title>domahub</title>
		<%- include("templates/head_links"); %>
		<link rel="stylesheet" href="/css/listing_create.css" type="text/css" />
		<script type="text/javascript">
			var user = <% if(typeof user != "undefined"){ %><%-JSON.stringify(user)%><% }else{ %>""<% } %>;
			var message = <% if(typeof message != "undefined"){ %><%-JSON.stringify(message)%><% }else{ %>""<% } %>;
		</script>
		<script src="/js/routes/listing_create_logic.js" type="text/javascript"></script>
	</head>

	<body>

		<%- include("templates/navbar", {user: user}); %>


		<div id="top_wrapper">

			<div id="forms_wrapper">

				<p id="mult_message">
					Create new listings!
				</p>

				<div id="sing_form_wrapper" class="form_wrapper">
					<form id="sing_form" action="/listing/create" method="post" novalidate>
						<p>Required</p>
						<input required class="create_input input" id="sing_domain" type="url" name="domain_name" placeholder="MyAwesomeDomain.com" />
						<textarea required class="create_input input" id="sing_description" name="description" placeholder="All listings need a great description! e.g. - The best website ever!"></textarea>
						<p>Optional</p>
						<p class="price_input_text">Minute</p>
						<input class="create_input price_input input" id="minute_price" type="number" name="minute_price" defaultValue="1" value="1" placeholder="1" min="1"/>
						<p class="price_input_text">Hour</p>
						<input class="create_input price_input input" id="hour_price" type="number" name="hour_price" defaultValue="1" value="1" placeholder="1" min="1"/>
						<p class="price_input_text">Day</p>
						<input class="create_input price_input input" id="day_price" type="number" name="day_price" defaultValue="10" value="10" placeholder="10" min="1"/>
						<p class="price_input_text">Week</p>
						<input class="create_input price_input input" id="week_price" type="number" name="week_price" defaultValue="25" value="25" placeholder="25" min="1"/>
						<p class="price_input_text">Month</p>
						<input class="create_input price_input input" id="month_price" type="number" name="month_price" defaultValue="50" value="50" placeholder="50" min="1"/>
						<input class="create_input input" id="sing_background" type="url" name="background_image" placeholder="CustomBackground.com/image.png" />
						<input class="create_input input" id="sing_buy" type="url" name="buy_link" placeholder="MyAwesomeDomain.com" />
						<input class="create_input is-primary button" id="sing_submit" type="submit" value="Create new listing!" />
					</form>
				</div>

				<div id="mult_form_wrapper" class="form_wrapper">
					<p>You can upload a .csv in the below format</p>
					<table class='table'>
						<thead>
							<tr>
								<th>Domain name*</th>
								<th>Description*</th>
								<th>Minute price</th>
								<th>Hourly price</th>
								<th>Daily price</th>
								<th>Weekly price</th>
								<th>Monthly price</th>
								<th>Background image</th>
								<th>Buy link</th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td>testdomain.com</td>
								<td>This is a test description</td>
								<td>1</td>
								<td>1</td>
								<td>10</td>
								<td>25</td>
								<td>50</td>
								<td>http://link-to-image.com/image.png</td>
								<td>http://link-to-buy.com/testdomain</td>
							</tr>
						</tbody>
					</table>
					<form id="mult_form" action="/listing/create/batch" method="post" enctype="multipart/form-data">
						<input id="mult_csv" class="create_input" type="file" name="csv" accept=".csv" />
						<progress id="mult_progress" class="create_input"></progress>
						<input id="mult_submit" class="create_input is-primary button" type="submit" value="Create new listings!" />
					</form>
				</div>

				<a id="mult_toggle">Multiple listings?</a>

			</div>
		</div>

		<%- include("templates/footer"); %>

	</body>

</html>

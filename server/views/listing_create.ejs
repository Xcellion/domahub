<!-- user profile page, should not see unless logged in -->

<!DOCTYPE html>

<html>

<head>
	<title>Create Listing - DomaHub</title>
	<%- include("templates/head_links"); %>
	<link rel="stylesheet" href="/css/listing_create.css" type="text/css" />
	<script type="text/javascript">
		var user = <% if(typeof user != "undefined"){ %><%-JSON.stringify(user)%><% }else{ %>""<% } %>;
		var message = <% if(typeof message != "undefined"){ %><%-JSON.stringify(message)%><% }else{ %>""<% } %>;
	</script>
	<script src="/js/routes/listing_create_logic.js" type="text/javascript"></script>
</head>

<body>

	<%- include("templates/navbar", {user: user}); %>

	<section class="section current-section is-medium">
		<div class="container">
			<progress class="progress is-small is-primary" value="0" max="100"></progress>
			<div class="columns">
				<div class="column is-half-desktop">
					<div class="content">
						<h1 class="is-normal">Choose listing type.</h1>
					</div>
					<div class="content">
						<a class="button is-accent" tabindex="7">
							<span class="icon">
								<i class="fa fa-check-circle-o"></i>
							</span>
							<span>I have multiple domains to upload.</span>
						</a>
					</div>
					<div class="content">
						<h2 class="heading is-blacklight">Step 1</h2>
						<h2>Please select one of the options below</h2>
					</div>
					<p class="control">
						<label class="label is-medium has-icon">Basic vs Premium</label>
						<i class="fa fa-question-circle-o"></i>
					</p>
					<div class="columns">
						<div class="column">
							<a class="box">
								<div class="content">
									<h2 class="is-bold is-accent margin-bottom-25">Basic Listing</h2>
									<ul>
										<li>Free to list</li>
										<li>15% commission taken</li>
										<li>Flat, fixed pricing</li>
										<li>No hourly pricing</li>
									</ul>
								</div>
							</a>
						</div>
						<div class="column">
							<a class="box">
								<div class="content">
									<h2 class="is-bold is-primary margin-bottom-25">Premium Listing</h2>
									<ul>
										<li>$5 per month to list</li>
										<li>NO commission taken</li>
										<li>Custom, flexible pricing</li>
										<li>Hourly pricing available</li>
									</ul>
								</div>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section is-medium is-hidden">
		<div class="container">
			<progress class="progress is-small is-primary" value="25" max="100"></progress>
			<div class="columns">
				<div class="column is-half">
					<div class="content">
						<h1 class="is-normal">Tell us more about your domain name.</h1>
					</div>
					<div class="content">
						<a class="button is-accent" tabindex="7">
							<span class="icon">
								<i class="fa fa-check-circle-o"></i>
							</span>
							<span>I have multiple domains to upload.</span>
						</a>
					</div>
					<div class="content">
						<h2 class="heading is-blacklight">Step 2</h2>
						<h2>Enter basic domain information</h2>
					</div>
					<form>
						<p class="control">
							<label class="label is-medium">Domain Name</label>
							<input id="sing-domain" class="input is-medium" type="url" placeholder="MyDomain.com"/>
						</p>
						<p class="control">
							<label class="label is-medium has-icon">Description</label>
							<i class="fa fa-question-circle-o"></i>
							<textarea id="sing-description" class="textarea is-medium" placeholder="This is a premium domain name with over a million visits per month!"></textarea>
						</p>
						<p class="control">
							<label class="label is-medium has-icon">Purchase Link</label>
							<i class="fa fa-question-circle-o"></i>
							<input id="sing-purchase" class="input is-medium" type="url" placeholder="godaddy.com/myDomainName"/>
						</p>
						<p class="control">
							<label class="label is-medium has-icon">Background Image</label>
							<i class="fa fa-question-circle-o"></i>
							<input id="sing-background" class="input is-medium" type="url" placeholder="backgroundImage.com/image.png"/>
						</p>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section class="section is-medium is-hidden">
		<div class="container">
			<progress class="progress is-small is-primary" value="50" max="100"></progress>
			<div class="columns">
				<div class="column is-half">
					<div class="content">
						<h1 class="is-normal">Categories help the right users find your domain.</h1>
					</div>
					<div class="content">
						<a class="button is-accent" tabindex="7">
							<span class="icon">
								<i class="fa fa-check-circle-o"></i>
							</span>
							<span>I have multiple domains to upload.</span>
						</a>
					</div>
					<div class="content">
						<h2 class="heading is-blacklight">Step 3</h2>
						<h2>Choose at least one Category</h2>
					</div>
					<form class="checkbox-form">
						<h3 class="heading">Categories</h3>
						<ul class="checkbox-wrapper">
							<li>
								<input id="cb1" type="checkbox" />
								<label for="cb1">Start-Up</label>
							</li>
							<li>
								<input id="cb2" type="checkbox" />
								<label for="cb2">Business</label>
							</li>
							<li>
								<input id="cb3" type="checkbox" />
								<label for="cb3">Event</label>
							</li>
							<li>
								<input id="cb4" type="checkbox" />
								<label for="cb4">Promotion</label>
							</li>
							<li>
								<input id="cb5" type="checkbox" />
								<label for="cb5">Holiday</label>
							</li>
							<li>
								<input id="cb6" type="checkbox" />
								<label for="cb6">Industry</label>
							</li>
							<li>
								<input id="cb7" type="checkbox" />
								<label for="cb7">I'm not sure.</label>
							</li>
						</ul>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section class="section is-medium is-hidden">
		<div class="container">
			<progress class="progress is-small is-primary" value="75" max="100"></progress>
			<div class="columns">
				<div class="column is-half">
					<div class="content">
						<h1 class="is-normal">Decide pricing for your domain.</h1>
					</div>
					<div class="content">
						<a class="button is-accent" tabindex="7">
							<span class="icon">
								<i class="fa fa-check-circle-o"></i>
							</span>
							<span>I have multiple domains to upload.</span>
						</a>
					</div>
					<div class="content">
						<h2 class="heading is-blacklight">Step 4</h2>
						<h2>Pricing options are based on listing type</h2>
					</div>
					<form>
						<div class="control is-horizontal">
							<div class="control-label is-small">
								<label class="label">Minute</label>
							</div>
							<div class="control has-icon">
								<input id="minute-price" class="input input-number" type="number" value="1" min="1"/>
								<i class="fa fa-dollar"></i>
							</div>
						</div>
						<div class="control is-horizontal">
							<div class="control-label is-small">
								<label class="label">Hour</label>
							</div>
							<div class="control has-icon">
								<input id="hour-price" class="input input-number" type="number" value="1" min="1"/>
								<i class="fa fa-dollar"></i>
							</div>
						</div>
						<div class="control is-horizontal">
							<div class="control-label is-small">
								<label class="label">Day</label>
							</div>
							<div class="control has-icon">
								<input id="day-price" class="input input-number" type="number" value="10" min="10"/>
								<i class="fa fa-dollar"></i>
							</div>
						</div>
						<div class="control is-horizontal">
							<div class="control-label is-small">
								<label class="label">Week</label>
							</div>
							<div class="control has-icon">
								<input id="week-price" class="input input-number" type="number" value="25" min="25"/>
								<i class="fa fa-dollar"></i>
							</div>
						</div>
						<div class="control is-horizontal">
							<div class="control-label is-small">
								<label class="label">Month</label>
							</div>
							<div class="control has-icon">
								<input id="month-price" class="input input-number" type="number" value="50" min="50"/>
								<i class="fa fa-dollar"></i>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section class="section is-medium is-hidden">
		<div class="container">
			<progress class="progress is-small is-primary" value="100" max="100"></progress>
			<div class="columns">
				<div class="column is-half">
					<div class="content">
						<h1 class="is-normal">Listing Preview</h1>
					</div>
				</div>
			</div>
		</div>
	</section>

<section class="section is-small">
	<div class="container">
		<div class="columns">
			<div class="column is-half-desktop">
				<div class="control is-grouped is-pulled-right">
					<p class="control">
						<a class="button is-primary prev-button">
							<span class="icon">
								<i class="fa fa-angle-left"></i>
							</span>
							<span>Previous</span>
						</a>
					</p>
					<p class="control">
						<a class="button is-primary next-button">
							<span>Next</span>
							<span class="icon">
								<i class="fa fa-angle-right"></i>
							</span>
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</section>


	<%- include("templates/footer"); %>
	<script src="/js/routes/listing_create_logic2.js" type="text/javascript"></script>
</body>

</html>
